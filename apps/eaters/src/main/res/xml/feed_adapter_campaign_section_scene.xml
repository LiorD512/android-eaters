<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <Transition
            app:constraintSetEnd="@+id/end"
            app:constraintSetStart="@+id/start"
            app:duration="500"
            app:motionInterpolator="easeInOut">
        <OnSwipe
                app:dragDirection="dragLeft"
                app:touchAnchorId="@id/feedCampaignSectionViewPager" />

        <KeyFrameSet>
            <KeyAttribute
                    android:rotationY="0"
                    app:framePosition="0"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
            <KeyAttribute
                    android:rotationY="-15"
                    app:framePosition="25"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
            <KeyAttribute
                    android:rotationY="-30"
                    app:framePosition="50"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
            <KeyAttribute
                    android:rotationY="-15"
                    app:framePosition="75"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
            <KeyAttribute
                    android:rotationY="0"
                    app:framePosition="100"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
        </KeyFrameSet>
    </Transition>

    <Transition
            android:id="@+id/leftToRight"
            app:constraintSetEnd="@id/end"
            app:constraintSetStart="@id/start"
            app:duration="1000">

        <OnSwipe
                app:dragDirection="dragRight"
                app:touchAnchorId="@+id/feedCampaignSectionViewPager" />

        <KeyFrameSet>
            <KeyAttribute
                    android:rotationY="0"
                    app:framePosition="0"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
            <KeyAttribute
                    android:rotationY="15"
                    app:framePosition="25"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
            <KeyAttribute
                    android:rotationY="30"
                    app:framePosition="50"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
            <KeyAttribute
                    android:rotationY="15"
                    app:framePosition="75"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
            <KeyAttribute
                    android:rotationY="0"
                    app:framePosition="100"
                    app:motionTarget="@id/feedCampaignSectionTitle" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start" >
        <TextView
                android:alpha="0"
                android:layout_marginHorizontal="90dp"
                android:layout_marginBottom="7.7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/feedCampaignSectionSubTitle"
                style="@style/LatoBold19White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="3.8sp"
                tools:text="Get 30% off your next order" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end" >

        <TextView
                android:alpha="0"
                android:layout_marginHorizontal="90dp"
                android:layout_marginBottom="7.7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                style="@style/LatoBold19White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="3.8sp"
                tools:text="Get 30% off your next order" />
    </ConstraintSet>
</MotionScene>
