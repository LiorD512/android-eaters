<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customBannerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30.0dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_chef_photo"
            android:layout_width="match_parent"
            android:layout_height="332dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="#ccc" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/photo_bottom_gradient_text_background_overlay"
            app:layout_constraintBottom_toBottomOf="@+id/iv_chef_photo"
            app:layout_constraintEnd_toEndOf="@+id/iv_chef_photo"
            app:layout_constraintStart_toStartOf="@+id/iv_chef_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_chef_photo"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_chef_name"
            style="@style/LatoBold15White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_chef_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Isak Johannesson" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>