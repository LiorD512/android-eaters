<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/orderHistoryArchiveMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingHorizontal="15.4dp"
        android:orientation="horizontal"
        android:paddingVertical="15.4dp">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
                android:id="@+id/orderHistoryItemChef"
                style="@style/LatoBold13Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Home Chef Oded" />

        <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/orderHistoryItemDate"
                style="@style/LatoReg13PurpelyGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                tools:text="05.04.19, 6:10PM" />

    </LinearLayout>

    <TextView
            android:id="@+id/orderHistoryItemPrice"
            style="@style/LatoBold13Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="7.7dp"
            tools:text="$6.3" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/ic_arrow_right_teal" />

</LinearLayout>