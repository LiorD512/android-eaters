<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_marginTop="53dp"
            android:id="@+id/title"
            style="@style/LatoBlack23Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:gravity="center"
            android:text="See home chefs in \nyour area"/>

    <com.bupp.wood_spoon_eaters.views.LottieAnimationView
            android:id="@+id/logo"
            app:lottieAnimType="LOCATION-PERMISSION"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="22dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            style="@style/LatoReg15Black"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="38dp"
            android:layout_marginHorizontal="15.4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="7.7sp"
            android:paddingHorizontal="45dp"
            android:gravity="center_horizontal"
            android:text="We need access to your location to see nearby chefs and dishes and to create an accurate delivery address"/>

    <com.bupp.wood_spoon_eaters.custom_views.BlueBtnCornered
            android:layout_marginTop="38dp"
            android:layout_marginHorizontal="15.4dp"
            app:title="Allow location access"
            android:id="@+id/locationPermissionFragAllow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            style="@style/LatoBlack15Teal"
            android:layout_gravity="center"
            android:paddingTop="26.5dp"
            android:paddingBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_blue"
            android:letterSpacing="0.03"
            android:id="@+id/locationPermissionFragReject"
            android:gravity="center_horizontal"
            android:text="Not now"/>

</LinearLayout>

