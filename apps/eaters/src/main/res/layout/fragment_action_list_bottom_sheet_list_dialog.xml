<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical"
    android:paddingHorizontal="8dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginVertical="7.7dp"
        android:background="@drawable/white_rect_7_radius"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/actionCloseButton"
        style="@style/LatoBlack15Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7.6dp"
        android:background="@drawable/white_rect_7_radius"
        android:gravity="center_horizontal"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="7.7sp"
        android:paddingVertical="20dp"
        android:text="@string/action_cancel" />
</LinearLayout>