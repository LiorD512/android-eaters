<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/cartMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cartFreeDeliveryView"
        app:layout_constraintTop_toTopOf="parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.5dp"
                android:layout_marginBottom="17.3dp">

                <ImageButton
                    android:id="@+id/cartCloseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="15.4dp"
                    android:alpha="0"
                    android:background="@null"
                    android:src="@drawable/icons_close" />

                <TextView
                    android:id="@+id/cartTitle"
                    style="@style/LatoBlack15Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:letterSpacing="0.03"
                    tools:text="cart page" />


            </FrameLayout>

            <View
                android:id="@+id/sep"
                android:layout_width="match_parent"
                android:layout_height="1.9dp"
                android:background="@color/silver" />


        <com.bupp.wood_spoon_eaters.views.swipeable_dish_item.SwipeableRecycler
            android:id="@+id/cartFragList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

    <com.bupp.wood_spoon_eaters.features.free_delivery.FreeDeliveryProgressView
        android:id="@+id/cartFreeDeliveryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/cartBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/floating_cart_btn_height"
        android:layout_gravity="bottom"
        android:background="@drawable/transparent_to_white_80_gradient"
        app:layout_constraintBottom_toBottomOf="parent">
        <!--            android:background="@color/dark_40">-->

        <com.bupp.wood_spoon_eaters.custom_views.BlueBtnCornered
            android:id="@+id/cartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15.4dp"
            app:title="Go to checkout" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

