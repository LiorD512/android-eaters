<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/feedFragEmptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:visibility="visible"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/icon"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_cookie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            android:layout_marginTop="23.5dp"
            style="@style/LatoBlack23Dark"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="11.5sp"
            android:gravity="center_horizontal"
            android:text="Oops!"/>

    <TextView
            android:id="@+id/subtitle"
            android:layout_marginTop="15.4dp"
            android:layout_marginHorizontal="45dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            style="@style/LatoReg13Black"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:letterSpacing="0.03"
            android:gravity="center_horizontal"
            android:text="Something went wrong
Please check your connection and try again."/>

    <com.bupp.wood_spoon_eaters.views.WSSimpleBtn
            android:layout_marginTop="27.4dp"
            android:id="@+id/noNetworkSectionBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:title="Try again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>