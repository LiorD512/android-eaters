<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_view_height">

    <FrameLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageButton
            android:visibility="gone"
            android:paddingEnd="15.4dp"
            android:layout_gravity="center"
            android:id="@+id/headerViewAddBtn"
            android:background="@null"
            android:src="@drawable/ic_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/SemiBold13Orangeish"
            android:id="@+id/headerViewSaveBtn"
            android:text="Save"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center|right"
            android:paddingRight="15.7dp"
            android:paddingLeft="15.7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            style="@style/SemiBold13Orangeish"
            android:id="@+id/headerViewDoneBtn"
            android:text="Done"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center|right"
            android:paddingRight="15.7dp"
            android:paddingLeft="15.7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            style="@style/SemiBold13Orangeish"
            android:id="@+id/headerViewNextBtn"
            android:text="Next"
            android:textColor="@color/orange_alpha_selector"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center|right"
            android:paddingRight="15.7dp"
            android:paddingLeft="15.7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </FrameLayout>

    <TextView
        style="@style/LatoBlack15Dark"
        tools:text="Title"
        android:id="@+id/headerViewTitle"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingHorizontal="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton

        android:src="@drawable/icons_close"
        android:id="@+id/headerViewCloseBtn"
        android:layout_marginLeft="15.4dp"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:visibility="gone"
        android:src="@drawable/icons_back"
        android:id="@+id/headerViewBackBtn"
        android:layout_marginLeft="15.4dp"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:visibility="gone"
        android:src="@drawable/icons_settings"
        android:id="@+id/headerViewSettingsBtn"
        android:layout_marginLeft="15.4dp"
        android:padding="5dp"
        android:layout_gravity="left|center"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/headerViewSep"
        android:background="@color/silver_50"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</FrameLayout>