<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.bupp.wood_spoon_chef.presentation.views.BottomSheetHeaderView
            android:id="@+id/deleteAccountHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Edit account" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="15.4dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_delete_account"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                style="@style/LatoReg15Black"
                android:text="You will no longer be able to log in to WoodSpoon with this account and will lose your account information."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:gravity="center"
                style="@style/LatoReg15Black"
                android:text="Are you sure you want to delete your account?"/>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>


                <com.bupp.wood_spoon_chef.presentation.custom_views.OrangeBtnCornered
                    android:id="@+id/deleteAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15.4dp"
                    app:isPink="true"
                    app:title="Yes, delete account"/>



        </LinearLayout>

    </LinearLayout>

</FrameLayout>
