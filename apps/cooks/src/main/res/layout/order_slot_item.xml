<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.4dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderSlotTitle"
            style="@style/SemiBold15Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            tools:text="Tomato soup" />

        <TextView
            android:layout_marginLeft="5.4dp"
            android:id="@+id/orderSlotUnits"
            style="@style/SemiBold15Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="x2" />

    </LinearLayout>

    <LinearLayout
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/orderSlotExceptionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal">

        <View
            android:layout_width="7.7dp"
            android:layout_height="7.7dp"
            android:layout_marginRight="7.7dp"
            android:background="@drawable/grey_circle" />

        <TextView
            android:id="@+id/orderSlotExceptions"
            style="@style/Reg15Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Without Garlic" />

    </LinearLayout>

    <View
        android:id="@+id/orderSlotSep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15.4dp"
        android:background="@color/silver" />

</LinearLayout>