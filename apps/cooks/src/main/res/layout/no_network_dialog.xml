<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noNetworkDialogBkg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/back"
        android:background="@color/dark_43"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:background="@drawable/white_two_rect"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginRight="50.9dp"
        android:layout_marginLeft="50.9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/noNetworkDialogMsg"
            style="@style/Reg15Dark"
            android:gravity="center"
            android:layout_marginTop="25.4dp"
            android:layout_marginRight="25.4dp"
            android:layout_marginLeft="25.4dp"
            android:layout_marginBottom="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please check your network connection and try again"/>

        <TextView
            android:layout_marginBottom="15.4dp"
            android:id="@+id/noNetworkDialogTry"
            style="@style/LatoBold11Orangish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_orangish_12_cornered"
            android:gravity="center_horizontal"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8.6sp"
            android:paddingHorizontal="9dp"
            android:paddingVertical="5dp"
            android:text="Retry" />

    </LinearLayout>

</FrameLayout>