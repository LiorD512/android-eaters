    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SemiBold13Dark"
            android:layout_gravity="left|center"
            android:layout_marginBottom="15.4dp"
            android:layout_marginTop="14.9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Select your menu"/>

        <TextView
            android:id="@+id/calendarHeaderAddDish"
            android:drawableLeft="@drawable/icons_add"
            android:drawablePadding="7.7dp"
            style="@style/SemiBold13Dark"
            android:layout_gravity="right|center"
            android:layout_marginBottom="15.4dp"
            android:layout_marginTop="14.9dp"
