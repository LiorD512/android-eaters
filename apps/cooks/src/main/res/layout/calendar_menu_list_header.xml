<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="15.4dp"
    android:layout_marginRight="15.4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/white">

    <LinearLayout
        android:id="@+id/calendarHeaderStartLayout"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50.4dp">

        <TextView
            style="@style/SemiBold13Dark"
            android:drawableLeft="@drawable/icons_time"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Opening the kitchen"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/calendarHeaderStartTime"
            style="@style/SemiBold13Dark50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="18:00PM"/>

    </LinearLayout>

    <View
        android:background="@color/silver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/calendarHeaderFinishLayout"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50.4dp">

        <TextView
            style="@style/SemiBold13Dark"
            android:drawableLeft="@drawable/icons_time"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Closing the kitchen"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/calendarHeaderFinishTime"
            style="@style/SemiBold13Dark50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="18:00PM"/>

    </LinearLayout>

    <View
        android:background="@color/silver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/calendarHeaderLastCallLayout"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50.4dp">

        <TextView
            style="@style/SemiBold13Dark"
            android:drawableLeft="@drawable/icons_time"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Last call for orders"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/calendarHeaderLastCallTime"
            style="@style/SemiBold13Dark50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="No limit"/>

    </LinearLayout>

    <View
        android:background="@color/silver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/calendarHeaderDeliveryLayout"
        android:layout_marginTop="9.1dp"
        android:layout_marginBottom="7.4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            style="@style/SemiBold13Dark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="Offer free delivery"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/calendarHeaderDeliverySwitch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_gravity="right"
            android:checked="false"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track_selector" />

    </LinearLayout>

    <TextView
        android:layout_marginBottom="15.4dp"
        style="@style/Reg13Dark_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery fee is $3.99. Free delivery increases your chances to receive an order by ~30% "/>

    <View
        android:background="@color/silver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/calendarHeaderWorldwideLayout"
        android:layout_marginTop="9.1dp"
        android:layout_marginBottom="7.4dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            style="@style/SemiBold13Dark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="Nationwide shipping"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/calendarHeaderWorldwideSwitch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_gravity="right"
            android:checked="false"
            android:thumb="@drawable/switch_thumb"
            app:track="@drawable/switch_track_selector" />

    </LinearLayout>

    <TextView
        android:layout_marginBottom="15.4dp"
        style="@style/Reg13Dark_50"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow your dishes to be shipped anywhere in the U.S. via UPS"/>

    <View
        android:visibility="gone"
        android:background="@color/silver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

