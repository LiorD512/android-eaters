<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tooltipDialogBkg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/back"
        android:background="@color/dark_43"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:background="@drawable/media_chooser_dialog_bkg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginRight="50.9dp"
        android:layout_marginLeft="50.9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tooltipDialogMsg"
            style="@style/LatoReg13Black"
            android:gravity="center"
            android:layout_marginTop="23dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error, please try again"/>


        <TextView
            android:id="@+id/tooltipDialogClose"
            android:layout_marginBottom="28dp"
            android:paddingHorizontal="12.4dp"
            android:paddingVertical="5dp"
            android:background="@drawable/rectangle_orangish_12_cornered"
            android:layout_gravity="center"
            style="@style/LatoBold11Orangish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8.6sp"
            android:gravity="center_horizontal"
            android:text="Got it!"/>

    </LinearLayout>

</FrameLayout>