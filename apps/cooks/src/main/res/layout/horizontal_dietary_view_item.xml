<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horizontalDietaryLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/horizontalDietaryIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:padding="15dp" />


    <com.bupp.wood_spoon_chef.presentation.custom_views.AutofitTextView
        android:id="@+id/horizontalDietaryName"
        style="@style/LatoBold9Grey"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="none"
        android:singleLine="true"
        android:textColor="@color/grey_to_black_selector"
        app:minTextSize="7sp"
        tools:text="" />

</LinearLayout>
