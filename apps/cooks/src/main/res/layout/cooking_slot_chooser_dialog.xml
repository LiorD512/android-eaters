<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mediaChooserDialogBkg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/back"
        android:background="@color/dark_43"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:background="@drawable/media_chooser_dialog_bkg"
        android:orientation="vertical"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="7.4dp"
        android:layout_marginRight="7.7dp"
        android:layout_marginLeft="7.7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_gravity="center"
                android:paddingTop="24dp"
                android:paddingBottom="22.7dp"
                style="@style/SemiBold15Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="May 20, 2019 6:00PM - 8:00PM"/>

            <ImageView
                android:padding="5dp"
                android:id="@+id/cookingSlotChooserDialogClose"
                android:layout_gravity="center|left"
                android:layout_marginLeft="15.4dp"
                android:src="@drawable/icons_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <View
                android:layout_gravity="bottom"
                android:background="@color/dark"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            
        </FrameLayout>

        <TextView
            style="@style/Reg15Dark"
            android:id="@+id/cookingSlotChooserDialogEdit"
            android:paddingTop="22.6dp"
            android:paddingBottom="22.7dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Cooking Slot"/>

        <View
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="7.7dp"
            android:layout_marginRight="7.7dp"
            android:background="@color/dark_43"
            android:layout_width="match_parent"/>

        <TextView
            style="@style/Reg15Dark"
            android:id="@+id/cookingSlotChooserDialogCancel"
            android:paddingTop="22.6dp"
            android:paddingBottom="22.7dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Cooking Slot"/>

    </LinearLayout>

</FrameLayout>