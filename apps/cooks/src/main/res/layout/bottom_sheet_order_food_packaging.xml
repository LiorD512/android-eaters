<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_cornered_bkg">

    <TextView
        android:id="@+id/orderFoodPackagingBsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LatoBlack19DarkDarkGrey"
        android:text="@string/order_food_packaging"
        android:gravity="center"
        android:layout_marginTop="@dimen/big"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/orderFoodPackagingBsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/large"
        android:paddingBottom="@dimen/large"
        app:layout_constraintBottom_toBottomOf="@id/orderFoodPackagingBsOrderNowBtn"
        app:layout_constraintTop_toBottomOf="@id/orderFoodPackagingBsTitle">

        <TextView
            style="@style/LatoReg13Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/large"
            android:gravity="start"
            android:lineSpacingExtra="6dp"
            app:layout_constraintTop_toBottomOf="@id/orderFoodPackagingBsTitle"
            android:text="@string/order_packaging_subject" />


    </androidx.core.widget.NestedScrollView>

    <com.bupp.wood_spoon_chef.presentation.custom_views.OrangeBtnCornered
        android:id="@+id/orderFoodPackagingBsOrderNowBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/medium"
        app:title="Order now"/>



</androidx.constraintlayout.widget.ConstraintLayout>