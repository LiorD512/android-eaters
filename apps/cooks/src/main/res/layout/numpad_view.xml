<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="180dp"
    android:background="@color/dailer_background">
    <TableLayout
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="1"
                android:id="@+id/numPadBtn1"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_reg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/dialer_txt_color"
                    android:textSize="20sp" />
                <TextView
                    android:visibility="gone"
                    android:text=" "
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="2"
                android:id="@+id/numPadBtn2"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="2"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="@string/view_dialer_2_under_txt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="3"
                android:id="@+id/numPadBtn3"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="3"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="@string/view_dialer_3_under_txt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="4"
                android:id="@+id/numPadBtn4"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="4"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="@string/view_dialer_4_under_txt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="5"
                android:id="@+id/numPadBtn5"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="5"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="@string/view_dialer_5_under_txt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="6"
                android:id="@+id/numPadBtn6"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="6"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="@string/view_dialer_6_under_txt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="7"
                android:id="@+id/numPadBtn7"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="7"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="@string/view_dialer_7_under_txt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="8"
                android:id="@+id/numPadBtn8"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="8"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="@string/view_dialer_8_under_txt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="9"
                android:id="@+id/numPadBtn9"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="9"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="@string/view_dialer_9_under_txt"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:visibility="invisible"
                android:layout_margin="0.25dp"
                android:tag="*"
                android:id="@+id/asterisk_btn"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text=""
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"/>
                <TextView
                    android:visibility="gone"
                    android:text=" "
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="0"
                android:id="@+id/numPadBtn0"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/dialer_txt_color"
                    android:layout_weight="1"
                    android:text="0"
                    android:fontFamily="@font/open_sans_reg"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/dialer_sub_txt_color"
                    android:text="+"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="0.25dp"
                android:tag="#"
                android:id="@+id/numPadBtnBackspace"
                android:clickable="true"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/icons_keyboard_delete"
                    android:id="@+id/back_space_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:background="@null"
                    android:id="@+id/hash_btn"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content">
                    <TextView
                        android:textColor="@color/dialer_txt_color"
                        android:layout_weight="1"
                        android:text="#"
                        android:fontFamily="@font/open_sans_reg"
                        android:textSize="40sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text=" "
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>