<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:tabGravity="center"
        android:paddingHorizontal="15.4dp"
        app:tabIndicator="@drawable/white_two_rect_15_radius"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorColor="@color/white_two"
        app:tabIndicatorGravity="stretch"
        app:tabMode="scrollable"
        app:tabRippleColor="@color/transparent"
        app:tabSelectedTextColor="@color/dark"
        app:tabTextAppearance="@style/OrdersTabLayoutStyle"
        app:tabTextColor="@color/purpley_grey_two" />

</FrameLayout>