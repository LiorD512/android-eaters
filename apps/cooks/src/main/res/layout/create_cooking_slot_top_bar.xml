<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="21.3dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/createCookingSlotTopBarImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_close_gray"
            android:layout_marginHorizontal="@dimen/medium"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/createCookingSlotTopBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LatoBlack15Dark"
            android:layout_gravity="center_vertical"
            tools:text="Create cooking slot"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/charcoal_grey_30"/>

</LinearLayout>