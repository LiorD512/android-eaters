<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/silver_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bupp.wood_spoon_chef.presentation.custom_views.HeaderView
        app:title="Your Dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:background="@drawable/your_dishes_background_pic"
        android:layout_marginTop="29.1dp"
        android:layout_width="match_parent"
        android:layout_height="345.6dp">

        <LinearLayout
            android:layout_marginRight="15.4dp"
            android:layout_marginLeft="15.4dp"
            android:layout_marginTop="67.9dp"
            android:background="@color/off_white_90"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="15.4dp"
                android:text="Here is where you share all the delicious details of the food you offer"
                android:gravity="center"
                style="@style/SemiBold13Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/dark"
                android:layout_marginRight="7.7dp"
                android:layout_marginLeft="7.7dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                style="@style/Reg13Dark"
                android:layout_marginTop="15.4dp"
                android:layout_marginBottom="23dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Remember that your cook profile will be published only after youâ€™ve added all the info, uploaded photos and completed your
profile details."/>

        </LinearLayout>

    </FrameLayout>

    <View
        android:layout_weight="1"
        android:layout_width="1dp"
        android:layout_height="0dp"/>

    <com.bupp.wood_spoon_chef.presentation.custom_views.OrangeBtnCornered
        app:title="Continue"
        android:id="@+id/welcomeDialogContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.bupp.wood_spoon_chef.presentation.custom_views.OrangeStrokeBtn
        app:title="Not Now"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="14.6dp"
        android:id="@+id/welcomeDialogNotNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>