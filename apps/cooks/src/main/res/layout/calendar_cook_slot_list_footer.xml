<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_card_view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small"
    android:layout_marginBottom="@dimen/small"
    android:layout_marginLeft="@dimen/medium"
    android:layout_marginRight="@dimen/medium"
    app:cardCornerRadius="@dimen/small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendarCookFooterAddBtn"
        android:background="@color/white_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_icon_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons_add"
            android:paddingLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/SemiBold13Dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_icon_plus"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/title_item_add_new_cooking_slot_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

