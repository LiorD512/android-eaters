<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical"
        tools:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satisfaction rate"
            android:gravity="center"
            android:layout_marginHorizontal="15.4dp"
            android:paddingVertical="23dp"
            style="@style/LatoBlack19DarkDarkGrey"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your rating is the overall satisfaction from your food. Diners are not ranking the delivery service or any other experience they had during the time of order"
            android:gravity="center"
            android:layout_marginHorizontal="15.4dp"
            style="@style/LatoReg13Black"/>

        <com.bupp.wood_spoon_chef.presentation.custom_views.OrangeBtnCornered
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.4dp"
            android:layout_marginHorizontal="15.4dp"
            android:layout_marginBottom="9dp"
            app:title="Ok"/>


    </LinearLayout>



</FrameLayout>
