<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="329dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:maxWidth="329dp"
    android:layout_gravity="center|top"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/newDishMediaVideoLayout"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:background="@drawable/white_two_rect_9_radius_black_stroke">

        <com.bupp.wood_spoon_chef.presentation.views.LottieAnimationView
            android:id="@+id/newDishMediaVideoIcon"
            app:lottieAnimType="NEW_DISH_VIDEO"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/newDishMediaVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1.4dp" />

    </FrameLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/newDishMediaVideoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15.4dp"
        android:id="@+id/newDishMediaVideoBtn"
        style="@style/LatoBold11Orangish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:background="@drawable/rectangle_orangish_12_cornered"
        android:gravity="center_horizontal"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="8.6sp"
        android:paddingHorizontal="9dp"
        android:paddingVertical="5dp"
        android:text="Add video" />


    <ImageButton
        app:layout_constraintTop_toTopOf="@+id/newDishMediaVideoLayout"
        app:layout_constraintBottom_toBottomOf="@+id/newDishMediaVideoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        android:visibility="gone"
        android:background="@null"
        android:elevation="9dp"
        android:padding="5dp"
        android:id="@+id/newDishMediaVideoPlay"
        android:src="@drawable/ic_play_vid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/newDishVideoRemoveBtn"
        android:visibility="gone"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:background="@drawable/rect_silver_10r"
        android:src="@drawable/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>