<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/feedRestaurantItemMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--    <View-->
    <!--            tools:visibility="gone"-->
    <!--            android:visibility="gone"-->
    <!--            android:id="@+id/feedDishItemWorldwideLayoutRect"-->
    <!--            android:layout_marginTop="3dp"-->
    <!--            android:layout_toStartOf="@+id/feedDishItemWorldwideLayout"-->
    <!--            android:rotation="-180"-->
    <!--            android:background="@drawable/nationwide_rect"-->
    <!--            android:layout_width="5dp"-->
    <!--            android:layout_height="15dp"/>-->

    <androidx.cardview.widget.CardView
            android:id="@+id/feedRestaurantItemCardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/feedRestaurantItemTopLayout"
                    android:layout_width="match_parent"
                    android:layout_height="179dp">

                <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/feedRestaurantItemViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_to_black_60_gradient"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/feedRestaurantBtnLeft"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:layout_marginStart="15.4dp"
                        android:background="@drawable/ic_arrow_left"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/feedRestaurantItemBtnRight"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:layout_marginEnd="15.4dp"
                        android:background="@drawable/ic_arrow_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <me.relex.circleindicator.CircleIndicator3
                        android:id="@+id/feedRestaurantItemIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="12.4dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="12dp"
                        app:ci_animator="@anim/circle_indicator_anim"
                        app:ci_drawable="@drawable/vp_white_indicator_selected"
                        app:ci_drawable_unselected="@drawable/vp_white_indicator_unselected"
                        app:ci_gravity="start|center"
                        app:ci_height="10dp"
                        app:ci_width="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                <TextView
                        android:id="@+id/feedRestaurantItemTitle"
                        style="@style/LatoBlack15White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.4dp"
                        android:letterSpacing="-0.01"
                        app:layout_constraintBottom_toTopOf="@+id/feedRestaurantItemIndicator"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="Vegan Health Salad" />

                <TextView
                        android:id="@+id/feedRestaurantItemPrice"
                        style="@style/LatoBlack15White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15.4dp"
                        android:layout_marginEnd="15dp"
                        android:letterSpacing="-0.01"
                        app:layout_constraintBottom_toBottomOf="@+id/feedRestaurantItemTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/feedRestaurantItemTitle"
                        tools:text="$10" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp">

                <ImageView
                        android:id="@+id/feedRestaurantItemChefImage"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="15.4dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                        android:layout_marginStart="7dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/feedRestaurantRating"
                        app:layout_constraintStart_toEndOf="@+id/feedRestaurantItemChefImage"
                        app:layout_constraintTop_toTopOf="parent">

                    <TextView
                            android:id="@+id/feedRestaurantItemRestaurantName"
                            style="@style/LatoBold15DarkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.01"
                            tools:text="Israeli in The Big Apple" />

                    <TextView
                            style="@style/LatoReg13NobelGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.01"
                            tools:text="by Assaf Beer" />

                </LinearLayout>

                <TextView
                        android:id="@+id/feedRestaurantRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15.4dp"
                        android:drawableStart="@drawable/ic_rating_star"
                        android:gravity="center"
                        android:letterSpacing="-0.01"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="4.4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="8dp"
            android:padding="7dp"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableEnd="@drawable/ic_small_tooltip"
            android:background="@drawable/blue_bkg_cornered"
            style="@style/SemiBold13White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:text="Ships nationwide"/>


</androidx.constraintlayout.widget.ConstraintLayout>