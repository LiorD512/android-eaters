<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/nationwideShippingChooserDialogBkg"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_43"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="7.7dp"
            android:layout_marginRight="7.7dp"
            android:layout_marginBottom="7.4dp"
            android:alpha="0.95"
            android:background="@drawable/rounded_white_bkg"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/SemiBold15Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="24dp"
                    android:paddingBottom="22.7dp"
                    android:text="Nationwide Shipping"/>

            <ImageView
                    android:id="@+id/nationwideShippingChooserDialogClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="15.4dp"
                    android:padding="5dp"
                    android:src="@drawable/icons_close"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/dark"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nationwideShippingChooserDialogRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>