                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->

        <View
                android:background="@color/silver"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:id="@+id/cancelOrderDialogCancelBtn"
                style="@style/SemiBold15Dark"
                android:gravity="center"
                android:paddingTop="15.5dp"
                android:paddingBottom="15.5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cancel order"/>

        <View
                android:background="@color/silver"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:id="@+id/cancelOrderDialogKeepBtn"
                style="@style/SemiBold15Blue"
                android:gravity="center"
                android:paddingTop="15.5dp"
                android:paddingBottom="15.5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Keep order"/>

    </LinearLayout>

    <com.bupp.wood_spoon_eaters.custom_views.WoodSpoonProgressBar
            android:id="@+id/cancelOrderPb"
            android:layout_width="match_parent"
