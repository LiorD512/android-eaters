<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_marginLeft="15.4dp"
            style="@style/SemiBold13Dark"
            android:id="@+id/singleFeedListViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="More Dishes"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="15.4dp"
            android:layout_marginBottom="38dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="7.9dp"
            android:paddingEnd="27.4dp"
            android:id="@+id/singleFeedListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>