<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/transparent"
        tools:bacground="@color/white"
        android:paddingTop="15dp"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            tools:background="@color/white_95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:src="@drawable/ws_marker_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            tools:background="@color/white_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/wsMarkerSmallCircle"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/ws_marker_circle_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/wsMarkerPin"
            android:src="@drawable/ic_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>