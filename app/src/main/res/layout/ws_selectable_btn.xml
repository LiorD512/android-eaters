<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/wsSelectableBtnBkg"
        android:paddingVertical="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:background="@drawable/ws_selectable_bkg_selector"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:paddingEnd="8dp"
            android:id="@+id/wsSelectableBtnIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/wsSelectableBtnText"
            style="@style/LatoBold13Teal"
            android:textColor="@color/dark50_to_teal_blue_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            tools:text="Delivery to door"/>

</LinearLayout>