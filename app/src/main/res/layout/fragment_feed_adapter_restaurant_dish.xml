<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/feedRestaurantDishItem"
        android:layout_width="match_parent"
        android:layout_height="179dp">

    <ImageView
            android:id="@+id/feedRestaurantDishItemBkg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/feedRestaurantDishItemTitle"
            style="@style/LatoBlack15White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.4dp"
            android:layout_marginBottom="27dp"
            android:letterSpacing="-0.01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Vegan Health Salad" />

    <TextView
            android:id="@+id/feedRestaurantDishItemPrice"
            style="@style/LatoBlack15White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.4dp"
            android:layout_marginEnd="15dp"
            android:letterSpacing="-0.01"
            app:layout_constraintBottom_toBottomOf="@+id/feedRestaurantDishItemTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/feedRestaurantDishItemTitle"
            tools:text="$10" />

</androidx.constraintlayout.widget.ConstraintLayout>
