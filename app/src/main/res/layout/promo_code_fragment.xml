<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/promoCodeFragmentLayout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".features.new_order.sub_screen.promo_code.PromoCodeFragment">

        <com.bupp.wood_spoon_eaters.custom_views.HeaderView
                android:id="@+id/promoCodeFragHeaderView"
                app:type="HEADER_VIEW_TYPE_BACK_TITLE_SAVE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingStart="15.4dp"
                android:paddingEnd="15.4dp"
                style="@style/SemiBold13Dark"
                android:layout_marginTop="26.9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Promo Code"/>

        <EditText
                android:layout_marginRight="15.4dp"
                android:layout_marginLeft="15.4dp"
                android:paddingLeft="15.4dp"
                android:id="@+id/promoCodeFragCodeInput"
                style="@style/Reg15Dark"
                android:background="@drawable/title_input_view_input_bkg"
                android:layout_marginTop="4.1dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

    </LinearLayout>

    <com.bupp.wood_spoon_eaters.custom_views.WoodSpoonProgressBar
            android:id="@+id/promoCodeFragPb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</FrameLayout>
