<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        tools:context=".features.locations_and_address.LocationPermissionFragment">

    <TextView
            style="@style/Bold19Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:gravity="center"
            tools:text="See home chefs in your area"/>

    <ImageView
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:src="@drawable/gps_permission_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            style="@style/Reg15Black"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="38dp"
            android:layout_marginHorizontal="45.4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="7.7sp"
            android:gravity="center_horizontal"
            android:text="Share your location to see nearby chefs and dishes"/>

    <com.bupp.wood_spoon_eaters.custom_views.BlueBtn
            android:layout_marginTop="38dp"
            android:layout_marginHorizontal="15.4dp"
            app:title="Allow location access"
            android:id="@+id/locationPermissionFragAllow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            style="@style/Bold15Blue"
            android:layout_gravity="center"
            android:paddingTop="26.5dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_blue"
            android:letterSpacing="0.03"
            android:id="@+id/locationPermissionFragReject"
            android:gravity="center_horizontal"
            android:text="Not now"/>

</LinearLayout>