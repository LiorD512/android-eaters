<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">

    <TextView
            android:id="@+id/metricsViewTitle"
            android:text="Accuracy"
            android:layout_marginBottom="8.4dp"
            style="@style/SemiBold13Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="7.7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/metricsViewDescription"
                android:text="Iâ€™ve got what I ordered"
                style="@style/Reg13Dark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <RadioGroup
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RadioButton
                    android:id="@+id/metricsViewNegative"
                    android:button="@drawable/icon_dislike_selector"
                    android:layout_marginEnd="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:id="@+id/metricsViewPositive"
                    android:button="@drawable/icon_like_selector"
                    android:layout_marginEnd="7.7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RadioGroup>

    </LinearLayout>

    <View
            android:layout_marginBottom="15.4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver"/>

</LinearLayout>