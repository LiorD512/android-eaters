<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:paddingLeft="19.2dp"
              android:paddingRight="10.3dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
            android:layout_marginTop="12.5dp"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/icons_time"
                android:layout_gravity="center"
                android:layout_marginRight="11.6dp"
                android:id="@+id/deliveryDetailsViewIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/deliveryDetailsViewTitle"
                style="@style/SemiBold13Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="When"/>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="18.5dp"
            android:id="@+id/timeDetailsViewAsap"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
                style="@style/Reg13Dark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="As soon as posible"/>

        <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/timeDetailsViewAsapV"
                android:src="@drawable/check_icon"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
            android:background="@color/silver"
            android:layout_marginTop="14.6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_marginTop="18.5dp"
            android:id="@+id/timeDetailsViewSchedule"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
                android:id="@+id/timeDetailsViewScheduleText"
                style="@style/Reg13Dark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Schedule an order"/>

        <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/timeDetailsViewScheduleV"
                android:visibility="gone"
                android:src="@drawable/check_icon"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
            android:background="@color/silver"
            android:layout_marginTop="14.6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>




</LinearLayout>