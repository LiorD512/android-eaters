<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errorDialogBkg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/back"
        android:background="@color/dark_43"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:background="@drawable/rounded_white_bkg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginRight="50.9dp"
        android:layout_marginLeft="50.9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="5dp"
            android:id="@+id/errorDialogCloseBtn"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15.4dp"
            android:layout_marginTop="15.4dp"
            android:src="@drawable/icons_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/errorDialogMsg"
            style="@style/Reg15Dark"
            android:gravity="center"
            android:layout_marginTop="15.4dp"
            android:layout_marginRight="25.4dp"
            android:layout_marginLeft="25.4dp"
            android:layout_marginBottom="63dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error, please try again"/>

    </LinearLayout>

</FrameLayout>