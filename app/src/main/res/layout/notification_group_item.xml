<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/NotificationGroupMainLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/white"
             android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/NotificationGroupName"
                    style="@style/SemiBold13Dark"
                    android:layout_marginBottom="4.1dp"
                    android:text="Order status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/NotificationGroupDescription"
                    style="@style/Reg13Dark_50"
                    android:text="Receive order status alerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/NotificationGroupSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.3dp"
                android:thumb="@drawable/white_circle"
                app:track="@drawable/switch_track_selector"/>
    </LinearLayout>

    <View
            android:background="@color/silver"
            android:layout_marginTop="15.8dp"
            android:layout_marginBottom="15.4dp"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

</LinearLayout>