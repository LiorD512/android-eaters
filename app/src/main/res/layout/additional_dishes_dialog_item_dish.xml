<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/img_layout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="7.7dp"
            android:padding="3dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.bupp.wood_spoon_eaters.views.resizeable_image.ResizeableImageView
                android:id="@+id/additionalDishImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:sizeType="SMALL" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:id="@+id/text1_layout"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toStartOf="@+id/additionalDishAddBtn"
            app:layout_constraintStart_toEndOf="@+id/img_layout"
            app:layout_constraintTop_toTopOf="@+id/img_layout">


        <TextView
                android:id="@+id/additionalDishName"
                style="@style/SemiBold13Dark"
                android:maxWidth="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                tools:text="Tdfg  dfsd f s df oup" />

        <TextView
                android:layout_gravity="end"
                android:id="@+id/additionalDishPrice"
                style="@style/Reg13Dark_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="start"
                android:lines="1"
                android:minWidth="50dp"
                tools:text="($7)" />

    </LinearLayout>



    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/img_layout"
            app:layout_constraintStart_toEndOf="@+id/img_layout"
            app:layout_constraintTop_toBottomOf="@+id/text1_layout">

        <TextView
                style="@style/SemiBold13Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count:" />

        <TextView
                android:id="@+id/additionalDishCount"
                style="@style/SemiBold13Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0" />

    </LinearLayout>


    <TextView
            android:id="@+id/additionalDishAddBtn"
            style="@style/SemiBold13White"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_cornered_bkg"
            android:gravity="center"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


