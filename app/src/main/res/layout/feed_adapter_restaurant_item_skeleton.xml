<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/feedRestaurantItemMainLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <io.supercharge.shimmerlayout.ShimmerLayout
            android:layout_marginTop="15.4dp"
            android:id="@+id/feedRestaurantItemShimmerLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:shimmer_auto_start="true"
            app:shimmer_color="@color/white_50"
            app:shimmer_animation_duration="1500">

        <androidx.cardview.widget.CardView
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:layout_marginHorizontal="7dp"
                android:id="@+id/customBannerLayout"
                android:layout_width="match_parent"
                android:layout_height="199dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="7.7dp"
                tools:visibility="visible">

            <View
                    android:background="@drawable/skeleton_rect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


        </androidx.cardview.widget.CardView>

    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
            android:layout_marginTop="15.4dp"
            android:id="@+id/feedRestaurantItemShimmerLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:shimmer_auto_start="true"
            app:shimmer_color="@color/white_50"
            app:shimmer_animation_duration="1500">

            <View
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/skeleton_rect"
                    android:layout_width="123dp"
                    android:layout_height="15.4dp" />

    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
            android:layout_marginTop="7.7dp"
            android:id="@+id/feedRestaurantItemShimmerLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:shimmer_auto_start="true"
            app:shimmer_color="@color/white_50"
            app:shimmer_animation_duration="1500">

        <androidx.cardview.widget.CardView
                android:id="@+id/feedRestaurantItemCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                app:cardCornerRadius="7.7dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:background="@drawable/skeleton_rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/feedRestaurantItemTopLayout"
                        android:layout_width="match_parent"
                        android:layout_height="179dp">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="68dp">


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

<!--            <View-->
<!--                    android:layout_marginVertical="7dp"-->
<!--                    android:layout_marginHorizontal="15dp"-->
<!--                    android:background="@drawable/skeleton_rect"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="247dp" />-->

    </io.supercharge.shimmerlayout.ShimmerLayout>

</androidx.appcompat.widget.LinearLayoutCompat>