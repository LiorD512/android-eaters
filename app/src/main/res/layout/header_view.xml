<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_view_height">

    <FrameLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/headerViewSettingsBtn"
                android:src="@drawable/icons_settings"
                android:padding="5dp"
                android:layout_marginRight="10.4dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                style="@style/SemiBold13Blue"
                android:id="@+id/headerViewDoneBtn"
                android:text="Done"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center|right"
                android:paddingRight="15.7dp"
                android:paddingLeft="15.7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView

                style="@style/SemiBold13Blue"
                android:id="@+id/headerViewSaveBtn"
                android:text="Save"
                tools:visibility="gone"
                android:textColor="@color/blue_alpha_selector"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center|right"
                android:paddingRight="15.7dp"
                android:paddingLeft="15.7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView

                style="@style/SemiBold13Dark"
                android:id="@+id/headerViewSkipBtn"
                android:text="Skip"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center|right"
                android:paddingRight="15.7dp"
                android:paddingLeft="15.7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


    </FrameLayout>

    <TextView
            style="@style/SemiBold15Dark"
            tools:text="כותרת"
            android:id="@+id/headerViewTitle"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:visibility="gone"
            android:paddingRight="15.4dp"
            android:id="@+id/headerViewLocationLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                tools:visibility="visible"
                android:src="@drawable/icons_profile"
                android:id="@+id/headerViewProfileBtn"
                android:layout_marginLeft="10.4dp"
                android:padding="5dp"
                android:layout_gravity="left|center"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.bupp.wood_spoon_eaters.custom_views.AddressAndTimeView
                tools:visibility="visible"
                android:id="@+id/headerViewAddressAndTime"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <ImageView
                tools:visibility="visible"
                android:id="@+id/headerViewSearchBtn"
                android:src="@drawable/icons_search"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/headerViewSearchLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_marginTop="2.3dp"
                android:layout_marginBottom="2.3dp"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_dark"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_gravity="center|right"
                    android:background="@null"
                    android:layout_marginLeft="7.7dp"
                    android:src="@drawable/icons_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <EditText
                    android:id="@+id/headerViewSearchInput"
                    android:gravity="start|center"
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:textColor="@color/dark"
                    android:textSize="13.4sp"
                    android:paddingLeft="15.4dp"
                    android:paddingRight="15.4dp"
                    android:maxLines="1"
                    tools:hint="hint"
                    android:background="@null"
                    android:textColorHint="@color/dark_50"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textAutoComplete"/>

            <ImageButton
                    android:id="@+id/headerViewSearchClean"
                    android:layout_gravity="center|right"
                    android:background="@null"
                    android:layout_marginRight="7.7dp"
                    android:src="@drawable/icons_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageButton
                android:layout_marginLeft="5dp"
                tools:visibility="visible"
                android:id="@+id/headerViewFilterBtn"
                android:src="@drawable/icons_filter"
                android:padding="5dp"
                android:layout_marginRight="10.4dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>

    <ImageButton
            android:visibility="gone"
            android:src="@drawable/icons_close"
            android:id="@+id/headerViewCloseBtn"
            android:layout_marginLeft="10.4dp"
            android:padding="5dp"
            android:layout_gravity="left|center"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <ImageButton
            android:visibility="gone"
            android:src="@drawable/icons_back"
            android:id="@+id/headerViewBackBtn"
            android:layout_marginLeft="10.4dp"
            android:padding="5dp"
            android:layout_gravity="left|center"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    <View
            android:id="@+id/headerViewSep"
            android:background="@color/silver_50"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</FrameLayout>