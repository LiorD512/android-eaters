<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_view_height">

    <FrameLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_gravity="left|center"
                android:layout_marginRight="15.4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/headerViewSearchBtn"
                    android:src="@drawable/icons_search"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/headerViewFilterBtn"
                    android:src="@drawable/icons_filter"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </FrameLayout>

        <TextView
                style="@style/SemiBold13Dark"
                android:id="@+id/headerViewSkipBtn"
                android:text="Skip"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center|right"
                android:paddingRight="15.7dp"
                android:paddingLeft="15.7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <TextView
                style="@style/SemiBold13Blue"
                android:id="@+id/headerViewSaveBtn"
                android:text="Save"
                android:textColor="@color/blue_alpha_selector"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center|right"
                android:paddingRight="15.7dp"
                android:paddingLeft="15.7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

    </FrameLayout>

    <TextView
            style="@style/SemiBold15Dark"
            tools:text="כותרת"
            android:id="@+id/headerViewTitle"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.bupp.wood_spoon_eaters.custom_views.LocationDetailsView
            android:id="@+id/headerViewLocationDetailsView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:visibility="gone"
            android:src="@drawable/icons_close"
            android:id="@+id/headerViewCloseBtn"
            android:layout_marginLeft="15.4dp"
            android:padding="5dp"
            android:layout_gravity="left|center"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:visibility="gone"
            android:src="@drawable/icons_back"
            android:id="@+id/headerViewBackBtn"
            android:layout_marginLeft="15.4dp"
            android:padding="5dp"
            android:layout_gravity="left|center"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:visibility="gone"
            android:src="@drawable/icons_profile"
            android:id="@+id/headerViewProfileBtn"
            android:layout_marginLeft="15.4dp"
            android:padding="5dp"
            android:layout_gravity="left|center"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/headerViewSep"
            android:background="@color/silver_50"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</FrameLayout>