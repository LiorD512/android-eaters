<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="23dp">

    <LinearLayout
            android:paddingHorizontal="15.4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageButton
                android:id="@+id/cookProfileFragBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:background="@null"
                android:src="@drawable/icons_back"
                android:visibility="gone" />

        <com.bupp.wood_spoon_eaters.custom_views.UserImageView
                android:id="@+id/cookProfileImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:imageSize="BIG"
                app:isWithShadow="true" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.3dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/cookProfileFragNameAndAge"
                        style="@style/SemiBold15Dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Neta Nachmias, 29" />

                <ImageView
                        android:id="@+id/cookProfileFragFlag"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="7dp" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/cookProfileFragReviewLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/cookProfileFragRating"
                        style="@style/SemiBold13Dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/icons_raitings_selected"
                        android:drawablePadding="8.7dp"
                        android:gravity="center"
                        tools:text="4.8" />

                <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_margin="15.4dp"
                        android:background="@color/dark" />

                <TextView
                        android:id="@+id/cookProfileFragReviews"
                        style="@style/SemiBold13Dark50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:text="15 Reviewers"
                        tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_marginHorizontal="15.4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15.3dp"
            android:background="@color/silver" />


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingHorizontal="15.4dp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/cookProfileFragCuisineLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                style="@style/SemiBold13Dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:drawableStart="@drawable/ic_cuisine"
                                android:drawablePadding="7dp"
                                android:gravity="center"
                                android:text="Cuisine" />

                        <com.bupp.wood_spoon_eaters.custom_views.stackableTextView.StackableTextView
                                android:id="@+id/cookProfileFragCuisineGrid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="12dp" />

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="15.4dp"
                                android:background="@color/silver" />

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/cookProfileFragDietaryLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                style="@style/SemiBold13Dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:drawableStart="@drawable/ic_dietary"
                                android:drawablePadding="6dp"
                                android:gravity="center"
                                android:text="Dietary accommodations" />

                        <com.bupp.wood_spoon_eaters.custom_views.stackableTextView.StackableTextView
                                android:id="@+id/cookProfileFragDietryGrid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="12dp" />

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="15.4dp"
                                android:background="@color/silver" />

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/cookProfileFragCertificateLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                style="@style/SemiBold13Dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:drawableStart="@drawable/ic_certificate"
                                android:drawablePadding="11dp"
                                android:gravity="center"
                                android:text="Certificats" />

                        <com.bupp.wood_spoon_eaters.views.gridStackableTextView.GridStackableTextView
                                android:id="@+id/cookProfileFragCertificateGrid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="12dp" />

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="15.4dp"
                                android:background="@color/silver" />

                    </LinearLayout>

                    <!--        <LinearLayout-->
                    <!--                android:layout_marginTop="23dp"-->
                    <!--                android:gravity="center"-->
                    <!--                android:orientation="vertical"-->
                    <!--                android:id="@+id/cookProfileFragCertificateLayout"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="wrap_content">-->

                    <!--            <TextView-->
                    <!--                    android:id="@+id/cookProfileFragCertificate"-->
                    <!--                    style="@style/Reg13Dark"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_gravity="center"-->
                    <!--                    android:drawableStart="@drawable/icons_certificate"-->
                    <!--                    android:drawablePadding="7.4dp"-->
                    <!--                    android:gravity="center"-->
                    <!--                    tools:text="Certificate in Culinary Arts"/>-->

                    <!--            <TextView-->
                    <!--                    android:id="@+id/cookProfileFragCertificateCount"-->
                    <!--                    style="@style/SemiBold13Dark50"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_gravity="center"-->
                    <!--                    android:layout_marginTop="9.8dp"-->
                    <!--                    android:gravity="center"-->
                    <!--                    tools:text="+ 2 More"/>-->

                    <!--        </LinearLayout>-->

                    <TextView
                            android:id="@+id/cookProfileFragStoryName"
                            style="@style/SemiBold13Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.4dp"
                            tools:text="Neta’s Story" />

                    <TextView
                            android:id="@+id/cookProfileFragStory"
                            style="@style/Reg15Dark_50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7.7dp"
                            tools:text="I love that cooking gives me a chance to be creative and indulge in some ‘play’ time – something we adults could do
with a lot more" />

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15.4dp"
                            android:background="@color/silver" />

                    <TextView
                            android:id="@+id/cookProfileFragDishBy"
                            style="@style/SemiBold13Dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.4dp"
                            tools:text="Dishes By Oded" />

                </LinearLayout>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cookProfileFragDishList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="24dp"
                    android:clipToPadding="false"
                    android:paddingStart="13dp"
                    android:paddingEnd="15.4dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>