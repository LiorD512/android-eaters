<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/groupDialogBkg"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15.4dp"
            android:layout_marginEnd="15.4dp" android:background="@drawable/rounded_white_bkg">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                    android:id="@+id/updateDialogTitle"
                    android:layout_marginTop="38dp"
                    style="@style/Bold15Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    tools:text="Update Required"/>

            <TextView
                    android:id="@+id/updateDialogBody"
                    android:gravity="center"
                    style="@style/SemiBold13Grey"
                    android:layout_marginStart="30.5dp"
                    android:layout_marginEnd="30.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    tools:text="New version is available in the app store.
Please update to the new version
before continuing."/>

            <View
                    android:layout_marginTop="32dp"
                    android:background="@color/silver_50"
                    android:layout_width="match_parent" android:layout_height="1dp"/>

            <TextView
                    style="@style/SemiBold15Blue"
                    android:gravity="center"
                    android:text="Go to GooglePlay"
                    android:id="@+id/updateDialogBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="15dp"/>

        </LinearLayout>

    </FrameLayout>


</FrameLayout>
