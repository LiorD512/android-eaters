<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:paddingTop="15.4dp"
            android:layout_marginHorizontal="15.4dp"
            style="@style/LatoBlack17Dark"
            android:id="@+id/singleFeedListViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Favorites"/>

    <com.bupp.wood_spoon_eaters.custom_views.feed_view.SingleFeedListView
            android:visibility="gone"
            android:id="@+id/favoritesViewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginRight="15.4dp"
            android:layout_marginLeft="15.4dp"
            android:visibility="visible"
            android:layout_marginVertical="15.4dp"
            android:orientation="horizontal"
            android:id="@+id/favoritesViewEmptyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/illus_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginHorizontal="15.4dp"
                style="@style/LatoReg13Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6.7sp"
                android:text="Save dishes you love by tapping the heart icon when you see them. Then, access them here 24/7!"/>

    </LinearLayout>

</LinearLayout>