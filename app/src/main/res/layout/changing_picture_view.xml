<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/changingImages0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="visible" />

    <ImageView
            android:id="@+id/changingImages1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:scaleType="centerCrop"
            android:visibility="visible" />


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_overlay" />


    <TextView
            android:paddingHorizontal="15.4dp"
            android:alpha="0"
            android:gravity="center"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15.4dp"
            android:id="@+id/changingImagesText0"
            style="@style/LatoBold15White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="7.7sp" />

    <TextView
            android:paddingHorizontal="15.4dp"
            android:alpha="0"
            android:gravity="center"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15.4dp"
            android:id="@+id/changingImagesText1"
            style="@style/LatoBold15White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="7.7sp"/>

</FrameLayout>