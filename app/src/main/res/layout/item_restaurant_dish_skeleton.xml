<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="8.4dp"
        android:paddingBottom="14.6dp">

    <View
            android:id="@+id/dishPhotoLayout"
            android:layout_width="81dp"
            android:layout_height="92dp"
            android:layout_marginEnd="15.4dp"
            android:background="@drawable/shimmer_cornered_rad13"
            app:layout_constraintTop_toTopOf="@id/dishName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dishTagFirst"/>

    <View
            android:id="@+id/dishName"
            style="@style/LatoBlack15DarkGrey"
            android:layout_width="123dp"
            android:layout_height="15dp"
            android:layout_marginStart="15.4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shimmer_cornered_rad13"/>

    <View
            android:id="@+id/dishPrice"
            android:layout_width="34dp"
            android:layout_height="15dp"
            android:layout_marginEnd="17.3dp"
            app:layout_constraintEnd_toStartOf="@+id/dishPhotoLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shimmer_cornered_rad7"/>

    <View
            android:id="@+id/dishDescription"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5.2dp"
            android:layout_marginStart="15.4dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shimmer_cornered_rad7"
            app:layout_constraintTop_toBottomOf="@+id/dishName"
            app:layout_constraintEnd_toStartOf="@id/dishPhotoLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dishTagFirst"/>

    <View
            android:id="@+id/dishDescription2"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15.4dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shimmer_cornered_rad7"
            app:layout_constraintTop_toBottomOf="@+id/dishDescription"
            app:layout_constraintEnd_toStartOf="@id/dishPhotoLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dishTagFirst"/>

    <View
            android:id="@+id/dishTagFirst"
            style="@style/LatoBold11Teal"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:background="@drawable/shimmer_cornered_rad7"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="15.4dp"
            app:layout_constraintTop_toBottomOf="@id/dishDescription2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <View
            android:id="@+id/dishSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_white_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>