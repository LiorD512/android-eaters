<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="21dp"
            android:background="@color/dark" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="23dp"
            android:paddingEnd="23dp">

        <CheckBox
                android:id="@+id/trackOrderProgressCb1"
                style="@style/Reg13Dark_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/circle_checkbox_selector"
                android:checked="true"
                android:paddingStart="7.3dp"
                android:text="We got your order" />

        <View
                android:layout_width="1.9dp"
                android:layout_height="30.7dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="-1dp"
                android:layout_marginBottom="-1dp"
                android:background="@color/black" />

        <CheckBox
                android:id="@+id/trackOrderProgressCb2"
                style="@style/Reg13Dark_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/circle_checkbox_selector"
                android:paddingStart="7.3dp"
                android:text="The cook started working on it" />

        <View
                android:layout_width="1.9dp"
                android:layout_height="30.7dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="-1dp"
                android:layout_marginBottom="-1dp"
                android:background="@color/black" />


        <CheckBox
                android:id="@+id/trackOrderProgressCb3"
                style="@style/Reg13Dark_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/circle_checkbox_selector"
                android:paddingStart="7.3dp"
                android:text="Your order is on its way" />

        <View
                android:layout_width="1.9dp"
                android:layout_height="30.7dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="-1dp"
                android:layout_marginBottom="-1dp"
                android:background="@color/black" />

        <CheckBox
                android:id="@+id/trackOrderProgressCb4"
                style="@style/Reg13Dark_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/circle_checkbox_selector"
                android:paddingStart="7.3dp"
                android:paddingBottom="5dp"
                android:text="Delivered" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/trackOrderProgressArrivalTime"
                    style="@style/SemiBold15Blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:letterSpacing="0.03"
                    tools:text="Estimated arrival - 6:45 PM" />

            <TextView
                    android:id="@+id/trackOrderProgressChangeTime"
                    style="@style/SemiBold13Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.03"
                    android:text="Change"
                    android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>