<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:gravity="left|center"
            android:layout_marginTop="15.4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/orderItemImage"
                android:layout_marginEnd="8.4dp"
                android:src="@drawable/share_pic"
                android:scaleType="centerCrop"
                android:layout_width="37.9dp"
                android:layout_height="37.9dp"/>

        <TextView
                android:id="@+id/orderItemName"
                style="@style/SemiBold15Dark"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Tomato Soup x1"/>

        <TextView
                android:id="@+id/orderItemPrice"
                style="@style/SemiBold15Blue"
                android:layout_gravity="end|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="$7"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderItemIngredientsRecyclerView"
            android:layout_marginTop="15.9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/orderItemNote"
            style="@style/Reg13Dark_50"
            android:drawableStart="@drawable/icon_note"
            android:drawablePadding="15.9dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15.9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Please add some extra parmesan on the side"/>

    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/orderItemCounter"
                android:layout_marginStart="15.4dp"
                android:layout_weight="3"
                style="@style/Reg13Dark"
                android:text="Count: 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/orderItemCountMinus"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="2.9dp"
                android:layout_marginEnd="23dp"
                app:cardElevation="2dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_minus"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="1.5dp"
                    android:layout_marginStart="1.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/orderItemCountPlus"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="2.9dp"
                app:cardElevation="2dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_plus"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>