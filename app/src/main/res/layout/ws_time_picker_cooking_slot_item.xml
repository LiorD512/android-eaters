<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:paddingTop="15.4dp"
            android:paddingBottom="15.4dp"
            android:paddingStart="15.4dp"
            tools:text="Breakfest"
            style="@style/Reg15Dark"
            android:id="@+id/wsTimePickerItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:gravity="end"
            android:paddingTop="15.4dp"
            android:paddingBottom="15.4dp"
            android:paddingHorizontal="15.4dp"
            tools:text="06:00 am - 11:59 am"
            style="@style/Reg15Dark"
            android:layout_weight="1"
            android:id="@+id/wsTimePickerItemDates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</LinearLayout>