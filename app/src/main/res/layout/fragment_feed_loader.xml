<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

   <com.bupp.wood_spoon_eaters.views.ChangingPictureView
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/feedLoaderPb"
           android:id="@+id/feedLoaderImageView"
           android:layout_width="match_parent"
           android:layout_height="0dp"/>

      <ProgressBar
              android:progress="0"
              app:layout_constraintBottom_toBottomOf="parent"
              android:progressDrawable="@drawable/horizontal_pb_color"
              android:id="@+id/feedLoaderPb"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="match_parent"
              android:layout_height="7.7dp"/>

   <ImageView
           android:paddingTop="185dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:src="@drawable/ic_woodspoon_logo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>