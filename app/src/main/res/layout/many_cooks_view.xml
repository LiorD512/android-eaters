<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_marginLeft="15.4dp"
            style="@style/SemiBold13Dark"
            android:id="@+id/manyCooksViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Top Rated Cooks"/>

    <androidx.recyclerview.widget.RecyclerView
            android:paddingLeft="15.4dp"
            android:layout_marginTop="15.6dp"
            android:id="@+id/manyCooksViewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>