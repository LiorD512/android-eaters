<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

    <ImageView
            android:id="@+id/tipPercentageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tip_12" />

    <TextView
            android:id="@+id/tipPercentageText"
            style="@style/LatoBlack13Black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="7dp"
            tools:text="I love you shawarmaâ€™ch" />

    <androidx.cardview.widget.CardView
            android:id="@+id/tipPercentageValueLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/pale_grey_to_white_four_selector"
            app:cardCornerRadius="7.7dp"
            app:cardElevation="0dp">

        <TextView
                android:id="@+id/tipPercentageValue"
                style="@style/LatoBold13Dark50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="12dp"
                tools:text="12%" />

    </androidx.cardview.widget.CardView>


</LinearLayout>

