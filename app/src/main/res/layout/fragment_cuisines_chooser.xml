<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bupp.wood_spoon_eaters.custom_views.HeaderView
        android:id="@+id/cuisineChooserFragHeader"
        app:type="HEADER_VIEW_TYPE_CLOSE_TITLE_DONE"
        app:title="Cooking Cuisines"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_view_height"/>

    <TextView
        style="@style/Reg13Dark_50"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Select the cuisine that most closely applies"/>

    <com.bupp.wood_spoon_eaters.custom_views.IconsGridView
        android:id="@+id/cuisineChooserFragGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>