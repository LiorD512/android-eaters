<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wsRangeTimePickerMainLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    <LinearLayout
            android:id="@+id/listLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <androidx.recyclerview.widget.RecyclerView
                android:clipToPadding="false"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:id="@+id/wsRangeTimePickerDateList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8" />

        <androidx.recyclerview.widget.RecyclerView
                android:clipToPadding="false"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:id="@+id/wsRangeTimePickerHoursList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2" />

    </LinearLayout>

    <LinearLayout
            android:background="@drawable/light_periwinkle_rect_cornered"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/wsRangeTimePickerUiLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="vertical">
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>