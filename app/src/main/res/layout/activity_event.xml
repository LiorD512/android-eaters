<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.bupp.wood_spoon_eaters.custom_views.HeaderView
                android:id="@+id/eventActHeaderView"
                app:type="HEADER_VIEW_TYPE_FEED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <FrameLayout
                android:id="@+id/eventActContainer"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>

        <com.bupp.wood_spoon_eaters.custom_views.orders_bottom_bar.CartBottomBar
                android:id="@+id/eventActOrdersBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.bupp.wood_spoon_eaters.custom_views.WoodSpoonProgressBar
            android:id="@+id/eventActPb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</FrameLayout>