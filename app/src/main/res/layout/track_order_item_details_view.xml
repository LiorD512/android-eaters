<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/orderItemLayout"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:gravity="left|center"
            android:layout_marginTop="15.4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/trackOrderItemImage"
                android:layout_marginEnd="8.4dp"
                tools:src="@drawable/share_pic"
                android:scaleType="centerCrop"
                android:layout_width="37.9dp"
                android:layout_height="37.9dp"/>

        <TextView
                android:id="@+id/trackOrderItemName"
                style="@style/SemiBold15Dark"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Tomato Soup x1"/>


        <TextView
                android:id="@+id/trackOrderItemPrice"
                style="@style/SemiBold15Blue"
                android:layout_gravity="end|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="$7"/>

    </LinearLayout>

    <TextView
            android:id="@+id/trackOrderItemNote"
            style="@style/Reg13Dark_50"
            android:drawableStart="@drawable/icon_note"
            android:drawablePadding="15.9dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15.9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Please add some extra parmesan on the side"/>

</LinearLayout>