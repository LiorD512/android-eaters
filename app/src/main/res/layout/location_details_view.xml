<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/header_view_height" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_gravity="center"
              android:gravity="center"
              app:layout_gravity="center"
              android:orientation="horizontal">


    <me.grantland.widget.AutofitTextView
            style="@style/SemiBold15Dark"
            android:id="@+id/locationDetailsViewTime"
            android:padding="10.7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASAP"/>

    <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <me.grantland.widget.AutofitTextView
            android:id="@+id/locationDetailsViewLocation"
            style="@style/SemiBold13Dark"
            android:padding="10.7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="160 Edgemont street"/>


</LinearLayout>