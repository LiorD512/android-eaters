<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/restaurantDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LatoReg13DarkGrey"
            android:paddingHorizontal="15.4dp"
            android:paddingBottom="3.8dp"
            android:ellipsize="end"
            tools:text= "Welcome to my kitchen, todat and every day, fresh food, 100% organic, 100% love. follow me on instâ€¦"/>

    <TextView
            android:id="@+id/restaurantDescriptionViewMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LatoBold13Dark"
            android:paddingHorizontal="15.4dp"
            android:paddingBottom="20dp"
            android:visibility="gone"
            android:text= "View More"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/restaurantCuisinesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15.4dp"
            android:clipToPadding="false"
            android:paddingBottom="23dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="17.8dp"
            android:background="@color/grey_white" />


    <TextView
            style="@style/LatoBold15DarkGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="23dp"
            android:paddingHorizontal="15.4dp"
            android:text="Delivery Timing" />


  <com.bupp.wood_spoon_eaters.views.DeliveryTimingTabLayout
          android:id="@+id/restaurantDeliveryTiming"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>


    <TextView
            style="@style/LatoBold15DarkGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.4dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/grey_white_cornered_rag15_rect"
            android:drawableStart="@drawable/ic_time_rest"
            android:drawableEnd="@drawable/ic_arrow"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Now" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="17.8dp"
            android:background="@color/grey_white" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/restaurantDishesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>