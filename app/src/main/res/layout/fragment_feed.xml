<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bones="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/feedFragMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white">

    <androidx.cardview.widget.CardView
            android:id="@+id/feedFragHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.bupp.wood_spoon_eaters.views.feed_header.FeedHeaderView
                android:id="@+id/feedFragHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/feedFragEmptyLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedFragHeaderLayout"
            tools:visibility="visible">

        <TextView
                android:id="@+id/emptyStateTitle"
                style="@style/LatoBlack23Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center_horizontal"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="11.5sp"
                android:paddingHorizontal="66dp"
                android:text="We aren&apos;t available
in this area quite yet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/illus_feed_empty"
                app:layout_constraintBottom_toBottomOf="@+id/subTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emptyStateTitle" />

        <TextView
                android:id="@+id/subTitle"
                style="@style/LatoReg13Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="67.5dp"
                android:gravity="center_horizontal"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6.7sp"
                android:paddingHorizontal="70dp"
                android:text="Stay tuned! We hope to deliver you
a home cooked meal very soon :)"
                app:layout_constraintBottom_toTopOf="@+id/feedFragChangeAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <com.bupp.wood_spoon_eaters.custom_views.BlueBtnCornered
                android:id="@+id/feedFragChangeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15.4dp"
                android:layout_marginBottom="15.4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:title="Try a different location" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.aliumujib.swipetorefresh.SwipeToRefreshLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/top_gradient"
            android:id="@+id/feedFragRefreshLayout"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            app:srl_animation="rotate"
            app:srl_direction="top"
            app:srl_icon="@mipmap/ic_launcher_round">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feedFragList"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutAnimation="@anim/feed_layout_animation"/>

    </com.aliumujib.swipetorefresh.SwipeToRefreshLayout>

    <View
            android:id="@+id/top_gradient"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/white_to_transparent_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedFragHeaderLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>