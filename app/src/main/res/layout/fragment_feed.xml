<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:animateLayoutChanges="true"
        android:id="@+id/feedFragMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <TextView
            android:id="@+id/feedFragHeaderError"
            style="@style/SemiBold13White"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/teal_blue"
            android:gravity="center"
            android:paddingStart="15.4dp"
            android:paddingEnd="15.4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/feedFragEmptyLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedFragHeaderError"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible">

        <TextView
                android:id="@+id/emptyStateTitle"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LatoBlack23Dark"
                android:paddingHorizontal="66dp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="11.5sp"
                android:gravity="center_horizontal"
                android:text="We aren&apos;t available
in this area quite yet"/>

        <ImageView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emptyStateTitle"
                app:layout_constraintBottom_toBottomOf="@+id/subTitle"
                android:src="@drawable/illus_feed_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/subTitle"
                android:layout_marginBottom="67.5dp"
                android:paddingHorizontal="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/feedFragChangeAddress"
                style="@style/LatoReg13Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="6.7sp"
                android:gravity="center_horizontal"
                android:text="Stay tuned! We hope to deliver you
a home cooked meal very soon :)"/>

        <com.bupp.wood_spoon_eaters.custom_views.BlueBtnCornered
                android:id="@+id/feedFragChangeAddress"
                android:layout_marginBottom="15.4dp"
                android:layout_marginHorizontal="15.4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:title="Try a different location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
            android:id="@+id/feedFragListLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedFragHeaderError"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="gone">

        <com.bupp.wood_spoon_eaters.custom_views.feed_view.MultiSectionFeedView
                android:id="@+id/feedFragSectionsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </FrameLayout>

    <com.bupp.wood_spoon_eaters.views.WSProgressBar
            android:id="@+id/feedFragPb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>