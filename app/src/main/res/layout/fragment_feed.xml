<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
            android:id="@+id/feedFragEmptyLayout"
            android:layout_marginTop="72dp"
            android:background="@drawable/my_dishes_pic"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:background="@color/offwhite_90"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="15.4dp"
                android:layout_marginEnd="15.4dp"
                android:layout_marginTop="63.6dp"
                android:layout_marginBottom="62.6dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/feedFragEmptyFeedTitle"
                    style="@style/SemiBold15Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    tools:text="Hey Neta"/>

            <View
                    android:background="@color/black"
                    android:layout_marginStart="15.4dp"
                    android:layout_marginEnd="15.4dp"
                    android:layout_marginTop="12.6dp"
                    android:layout_marginBottom="15.4dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <TextView
                    style="@style/Reg13Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="In order to see the dishes,\nplease enter your address "/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
            android:id="@+id/feedFragListLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.bupp.wood_spoon_eaters.custom_views.feed_view.MultiSectionFeedView
                android:layout_marginTop="15.4dp"
                android:id="@+id/feedFragSectionsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </FrameLayout>

    <com.bupp.wood_spoon_eaters.custom_views.WoodSpoonProgressBar
        android:id="@+id/feedFragPb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>