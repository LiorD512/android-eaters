<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15.4dp"
        android:background="@color/white"
        android:id="@+id/cartItemMainLayout"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
                android:id="@+id/cartItemQuantity"
                style="@style/LatoBold11White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/cartItemName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:layout_marginVertical="15.4dp"
                android:background="@drawable/teal_blue_circle"
                tools:text="1" />

        <TextView
                android:id="@+id/cartItemName"
                style="@style/LatoBlack13DarkGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:paddingStart="7dp"
                app:layout_constraintBottom_toBottomOf="@+id/cartItemQuantity"
                app:layout_constraintStart_toEndOf="@+id/cartItemQuantity"
                app:layout_constraintTop_toTopOf="@+id/cartItemQuantity"
                tools:text="GF Schnitzel" />

        <TextView
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:id="@+id/cartItemDescription"
                style="@style/LatoReg11PurpleyGreyThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:paddingStart="7dp"
                android:paddingTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/cartItemName"
                app:layout_constraintStart_toStartOf="@+id/cartItemName"
                tools:text="No olive oil â€¢ Pita on the side" />

        <TextView
                android:id="@+id/cartItemPrice"
                style="@style/LatoReg13DarkGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cartItemName"
                tools:text="$10" />

</androidx.constraintlayout.widget.ConstraintLayout>
