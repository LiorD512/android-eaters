<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/top_cornered_bkg"
        android:orientation="vertical">

    <TextView
            style="@style/LatoBlack19DarkGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Start new cart?" />


    <TextView
            android:id="@+id/clearCartRestTitle"
            style="@style/LatoReg13Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Your cart already contains dishes from" />

    <TextView
            android:id="@+id/clearCartRestCurRest"
            style="@style/LatoBold13Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.7dp"
            android:gravity="center"
            tools:text="cur Restaurant" />

    <TextView
            android:id="@+id/clearCartRestSubtitle"
            style="@style/LatoReg13Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Would you like to clear the cart and add this dish from Israeli in the big apple instead?" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23.2dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">


        <TextView
                android:id="@+id/clearCartRestCancelBtn"
                style="@style/LatoBlack15Teal"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/pale_grey_cornered_rect"
                android:gravity="center"
                android:text="Cancel" />

        <com.bupp.wood_spoon_eaters.custom_views.BlueBtnCornered
                android:id="@+id/clearCartRestClearBtn"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14.7sp"
                app:title="New Cart" />

    </LinearLayout>

</LinearLayout>