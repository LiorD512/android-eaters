<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:background="@color/dark_43"
             android:id="@+id/noDishUnAvailableLayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:background="@drawable/rounded_white_bkg"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="50.9dp"
            android:layout_marginLeft="50.9dp"
            android:paddingLeft="7.7dp"
            android:paddingRight="7.7dp"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/noDishUnAvailableCloseBtn"
                android:layout_gravity="start"
                android:src="@drawable/icons_close"
                android:paddingLeft="7.7dp"
                android:paddingTop="23.5dp"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                style="@style/SemiBold15Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7.7dp"
                android:layout_marginRight="7.7dp"
                android:layout_marginBottom="23.8dp"
                android:gravity="center"
                android:text="We are sorry"/>

        <TextView
                style="@style/Reg13Dark_50"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="7.6dp"
                android:layout_marginEnd="7.6dp"
                android:layout_marginBottom="24.2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There are no available dishes at your current time and location \n\n We are working on spreading the word and bringing more cooks to WoodSpoon \n In the meanwhile, please consider changing your time or location to find other dishes, or look at our &quot;More Dishes&quot; section to see availability"/>

    </LinearLayout>

</FrameLayout>