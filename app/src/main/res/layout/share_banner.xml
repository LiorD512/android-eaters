<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/white">

    <androidx.cardview.widget.CardView
            android:id="@+id/customBannerLayout"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:visibility="gone"
            app:cardElevation="8dp"
            tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/customBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/banner_overlay" />

            <TextView
                    android:layout_marginStart="15.4dp"
                    android:layout_marginBottom="7.7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/customBannerSubTitle"
                    android:id="@+id/customBannerTitle"
                    style="@style/LatoBold13White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="3.8sp"
                    android:shadowColor="#cc000000"
                    android:shadowRadius="6"
                    tools:text="Get 30% off your next order" />

            <TextView
                    android:layout_marginStart="15.4dp"
                    android:layout_marginBottom="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/customBannerSubTitle"
                    style="@style/LatoBold13White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="9.6sp"
                    android:shadowColor="#cc000000"
                    android:shadowRadius="6"
                    tools:text="Invite your friends to try WoodSpoon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>