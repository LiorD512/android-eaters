<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.bupp.wood_spoon_eaters.features.main.report.ReportFragment">

    <ScrollView
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout
                android:background="@color/light_periwinkle_20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:paddingStart="15.4dp"
                    android:paddingEnd="15.4dp"
                    android:layout_marginTop="23.2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        style="@style/SemiBold13Dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report Issue With The Dish"/>

                <CheckBox
                        android:id="@+id/reportFragWrongDishCb"
                        android:layout_marginTop="11dp"
                        android:paddingTop="13.1dp"
                        android:paddingBottom="11.8dp"
                        android:button="@drawable/circle_checkbox_selector"
                        android:text="I got the wrong dish"
                        android:paddingStart="7.7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/silver"/>

                <CheckBox
                        android:id="@+id/reportFragNoStandardFoodCb"
                        android:paddingTop="16dp"
                        android:paddingBottom="11.8dp"
                        android:button="@drawable/circle_checkbox_selector"
                        android:text="The food was not to the standard I expected"
                        android:paddingStart="7.7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/silver"/>

                <CheckBox
                        android:id="@+id/reportFragMissingFoodCb"
                        android:paddingTop="16dp"
                        android:paddingBottom="11.8dp"
                        android:button="@drawable/circle_checkbox_selector"
                        android:text="I'm missing something in the dish"
                        android:paddingStart="7.7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/silver"/>

                <com.bupp.wood_spoon_eaters.custom_views.InputTitleView
                        android:id="@+id/reportFragDishNotes"
                        app:lines="4"
                        app:inputType="LONG_TEXT"
                        app:title=" "
                        app:hint="Somthing else…"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="15.4dp"
                    android:orientation="vertical"
                    android:paddingStart="15.4dp"
                    android:paddingEnd="15.4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        style="@style/SemiBold13Dark"
                        android:layout_marginTop="23.2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report a delivery issue"/>

                <RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content">

                    <RadioButton
                            android:id="@+id/reportFragArrivedLateCb"
                            android:layout_marginTop="11dp"
                            android:paddingTop="13.1dp"
                            android:paddingBottom="11.8dp"
                            android:button="@drawable/circle_checkbox_selector"
                            android:text="The food arrived late"
                            android:paddingStart="7.7dp"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/silver"/>

                    <RadioButton
                            android:id="@+id/reportFragNeverDeliveredCb"
                            android:paddingTop="16dp"
                            android:paddingBottom="11.8dp"
                            android:button="@drawable/circle_checkbox_selector"
                            android:text="The food never came"
                            android:paddingStart="7.7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </RadioGroup>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/silver"/>

                <com.bupp.wood_spoon_eaters.custom_views.InputTitleView
                        android:id="@+id/reportFragDeliveryNotes"
                        app:lines="4"
                        app:inputType="LONG_TEXT"
                        app:title=" "
                        app:hint="Somthing else…"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <com.bupp.wood_spoon_eaters.custom_views.BlueBtn
                        android:id="@+id/reportFragReportBtn"
                        android:layout_marginTop="23dp"
                        android:layout_marginBottom="23.1dp"
                        app:title="Report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
