<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="false"
        android:background="@drawable/background_white_cornered"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
                style="@style/LatoBlack19DarkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start new cart?"
                android:layout_marginTop="23dp"
                android:gravity="center" />


        <TextView
                android:id="@+id/newCartDialogSubjectTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your cart already contains dishes from Erans House.\n\nWould you like to clear the cart and add this dish from Israeli in the big apple instead?"
                android:textColor="#000000"
                android:layout_marginHorizontal="30dp"
                android:textSize="13.4sp"
                android:layout_marginTop="23dp"
                android:gravity="center" />



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="23.2dp"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/newCartDialogCancelBtn"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/pale_grey_cornered_rect"
                    style="@style/LatoBlack15Teal"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:text="Cancel" />

            <com.bupp.wood_spoon_eaters.custom_views.BlueBtnCornered
                    android:id="@+id/newCartDialogNewCardBtn"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14.7sp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/blue_bkg_cornered"
                    android:textColor="@color/white"
                    app:title="New Cart" />
        </LinearLayout>


</LinearLayout>