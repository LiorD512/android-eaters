<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:orientation="horizontal"
        android:layout_gravity="start"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cuisineItemLayout"
        android:background="@color/white"
        android:paddingHorizontal="15.4dp"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:id="@+id/cuisineItemTitle"
            android:paddingVertical="22dp"
            style="@style/LatoBold13Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="6.7sp"
            tools:text="African"/>

    <ImageView
            android:id="@+id/cuisineItemV"
            android:visibility="invisible"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_check_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</FrameLayout>