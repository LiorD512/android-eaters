<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/top_cornered_bkg"
        android:orientation="vertical">

    <TextView
            style="@style/LatoBlack19DarkGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Dish unavailable at chosen time" />


    <TextView
            style="@style/LatoReg13Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Your cart is set to deliver at" />

    <TextView
            android:id="@+id/clearCartCookingSlotCurrent"
            style="@style/LatoBold13Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            tools:text="Now" />

    <TextView
            style="@style/LatoReg13Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="This dish is available to deliver at" />

    <TextView
            android:id="@+id/clearCartCookingSlotFuture"
            style="@style/LatoBold13Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            tools:text="Mon 2:00 pm - 2:30 pm" />

    <TextView
            android:layout_marginHorizontal="38dp"
            android:layout_marginTop="14.7dp"
            style="@style/LatoReg13Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="3.7sp"
            android:gravity="center_horizontal"
            android:text="Would you like to change your delivery timing
And start a new cart?"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23.2dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">


        <TextView
                android:id="@+id/clearCartCookingSlotCancelBtn"
                style="@style/LatoBlack15Teal"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/pale_grey_cornered_rect"
                android:gravity="center"
                android:text="Cancel" />

        <com.bupp.wood_spoon_eaters.custom_views.BlueBtnCornered
                android:id="@+id/clearCartCookingSlotClearBtn"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14.7sp"
                app:title="New Cart" />

    </LinearLayout>

</LinearLayout>