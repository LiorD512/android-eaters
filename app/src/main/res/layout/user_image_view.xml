<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:clickable="false"
        android:id="@+id/cookImageViewLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:id="@+id/cookImageViewLayoutCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="40dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:visibility="gone"
                    android:src="@drawable/user_image_background"
                    android:scaleType="fitCenter"
                    android:layout_centerInParent="true"
                    android:id="@+id/cookImageViewBkg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageButton
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_pic_placeholder"
                    android:layout_centerInParent="true"
                    android:id="@+id/cookImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="-25dp"
            android:src="@drawable/ic_blue_play"
            android:layout_below="@+id/cookImageViewLayoutCardView"
            android:layout_toRightOf="@+id/cookImageViewLayoutCardView"
            android:id="@+id/cookImageViewPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>