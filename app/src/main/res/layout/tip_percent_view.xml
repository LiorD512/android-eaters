<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/light_periwinkle_20"
              android:paddingStart="7.4dp"
              android:paddingEnd="7.4dp"
              android:paddingBottom="15dp"
              android:paddingTop="15dp"
              android:gravity="center"
              android:weightSum="4"
              android:layout_gravity="center"
              android:orientation="horizontal">

    <androidx.cardview.widget.CardView
            android:id="@+id/tipPercent10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white_to_blue_selector"
            app:cardElevation="8dp"
            app:cardCornerRadius="2.9dp">

        <TextView
                style="@style/SemiBold13Dark50"
                android:text="10%"
                android:textColor="@color/dark50_to_white_selector"
                android:layout_gravity="center"
                android:paddingStart="16.7dp"
                android:paddingEnd="16.7dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/tipPercent15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white_to_blue_selector"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="2.9dp">

        <TextView
                style="@style/SemiBold13Dark50"
                android:text="15%"
                android:textColor="@color/dark50_to_white_selector"
                android:layout_gravity="center"
                android:paddingStart="16.7dp"
                android:paddingEnd="16.7dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/tipPercent20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white_to_blue_selector"
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="2.9dp">

        <TextView
                style="@style/SemiBold13Dark50"
                android:text="20%"
                android:textColor="@color/dark50_to_white_selector"
                android:layout_gravity="center"
                android:paddingStart="16.7dp"
                android:paddingEnd="16.7dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/tipPercentCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white_to_blue_selector"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="2.9dp">

        <TextView
                android:id="@+id/tipPercentCustomText"
                style="@style/SemiBold13Dark50"
                android:text="Custom"
                android:textColor="@color/dark50_to_white_selector"
                android:layout_gravity="center"
                android:paddingStart="16.7dp"
                android:paddingEnd="16.7dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>