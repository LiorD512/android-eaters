<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:background="@color/dark_43"
             android:id="@+id/shareDialogLayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:background="@drawable/rounded_white_bkg"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="50.9dp"
            android:layout_marginLeft="50.9dp"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
                android:background="@drawable/share_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/shareDialogCloseBtn"
                    android:layout_gravity="start"
                    android:src="@drawable/icons_close"
                    android:paddingLeft="7.7dp"
                    android:paddingTop="23.5dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </FrameLayout>


        <TextView
                android:id="@+id/shareDialogText"
                style="@style/SemiBold13Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15.4dp"
                android:layout_marginStart="22.6dp"
                android:layout_marginEnd="22.6dp"
                android:layout_marginBottom="22.6dp"
                android:text="@string/share_dialog_share_text"/>

        <View
                android:layout_marginStart="7.7dp"
                android:layout_marginEnd="7.7dp"
                android:background="@color/silver"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:id="@+id/shareDialogShareBtn"
                style="@style/SemiBold15Dark"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15.4dp"
                android:layout_marginBottom="7.8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"/>


    </LinearLayout>

</FrameLayout>