<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/white"
        tools:showPaths="true"
        android:id="@+id/swipeableDishMainLayout"
        app:layoutDescription="@xml/swipe_for_options_view_scene2">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/swipeableDishAddLayout"
            android:background="@drawable/teal_rect_right_cornered"
            android:layout_width="@dimen/swipeable_dish_option_width"
            android:layout_height="match_parent">

        <TextView
                android:layout_marginHorizontal="15.4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/LatoReg13White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:gravity="center_horizontal"
                tools:text="Add item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/swipeableDishRemoveLayout"
            android:background="@drawable/watermelon_rect_left_cornered"
            android:layout_width="@dimen/swipeable_dish_option_width"
            android:layout_height="match_parent">

        <TextView
                android:layout_marginHorizontal="15.4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/LatoReg13White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:gravity="center_horizontal"
                tools:text="Remove item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/swipeableDishLayout"
            android:background="@color/dark_40"
            android:layout_width="0dp"
            android:layout_height="0dp">

        <TextView
                android:layout_marginTop="23dp"
                android:id="@+id/swipeableDishName"
                style="@style/LatoBlack15DarkGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="GF Schnitzel" />

        <TextView
                android:id="@+id/swipeableDishPrice"
                style="@style/LatoBlack15DarkGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:letterSpacing="-0.01"
                app:layout_constraintEnd_toStartOf="@+id/swipeableDishImg"
                app:layout_constraintTop_toTopOf="@+id/swipeableDishName"
                android:text="$10" />

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/swipeableDishImg"
                android:layout_width="81dp"
                android:layout_height="93dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedCorners13ImageView" />

        <TextView
                android:id="@+id/swipeableDishDescription"
                style="@style/LatoReg13DarkGrey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.9dp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="5.8sp"
                app:layout_constraintEnd_toEndOf="@+id/swipeableDishPrice"
                app:layout_constraintStart_toStartOf="@+id/swipeableDishName"
                app:layout_constraintTop_toBottomOf="@+id/swipeableDishName"
                tools:text="Labaneh is soft cheese, similar in texture to cream cheese, made from strained..." />

        <com.bupp.wood_spoon_eaters.views.dish_tags_view.DishTagsView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:isScrollable="false"
                android:layout_marginTop="5.2dp"
                app:layout_constraintBottom_toBottomOf="@+id/swipeableDishImg"
                app:layout_constraintEnd_toEndOf="@+id/swipeableDishPrice"
                app:layout_constraintStart_toStartOf="@+id/swipeableDishDescription"
                app:layout_constraintTop_toBottomOf="@+id/swipeableDishDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
            android:id="@+id/swipeableDishSpace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>