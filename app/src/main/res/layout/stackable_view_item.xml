<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/stackableViewItem1"
                style="@style/Reg13Dark_50"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15.4dp"
                android:gravity="center"
                android:ellipsize="none"
                tools:text="adjaslkdasj"/>

        <LinearLayout
                tools:visibility="visible"
                android:id="@+id/stackableViewItem2Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            <View
                    android:layout_width="5.8dp"
                    android:layout_height="5.8dp"
                    android:layout_gravity="center"
                    android:background="@drawable/light_rose_circle"/>

            <TextView
                    android:id="@+id/stackableViewItem2"
                    style="@style/Reg13Dark_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.4dp"
                    android:layout_marginRight="15.4dp"
                    android:ellipsize="none"
                    android:gravity="center"
                    tools:text="adjaslkdasj /n bbbbbbb"/>

        </LinearLayout>

        <LinearLayout
                tools:visibility="gone"
                android:id="@+id/stackableViewItem3Layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <View
                    android:layout_width="5.8dp"
                    android:layout_height="5.8dp"
                    android:layout_gravity="center"
                    android:background="@drawable/light_rose_circle"/>

            <TextView
                    android:id="@+id/stackableViewItem3"
                    style="@style/Reg13Dark_50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="none"
                    tools:text="adjaslkdasj"/>


        </LinearLayout>
    </LinearLayout>


</FrameLayout>