<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="15.4dp"
        android:layout_marginTop="15.4dp"
        android:background="@drawable/top_cornered_bkg"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="220dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_gravity="center"
            android:paddingVertical="17dp"
            style="@style/Bold15Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:gravity="center_horizontal"
            android:text="Delivery time"/>

    <View
            android:background="@color/light_periwinkle"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <com.bupp.wood_spoon_eaters.views.ws_range_time_picker.WSRangeTimePicker
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

    <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
            android:visibility="gone"
            android:id="@+id/single_day_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:picker_itemSpacing="6dp"
            app:picker_curvedMaxAngle="45"
            app:picker_curved="true"
            app:picker_selectorColor="@android:color/transparent"
            app:picker_stepSizeMinutes="30"
            app:picker_cyclic="true"
            app:picker_dayCount="31"
            app:picker_mustBeOnFuture="true"
            app:picker_visibleItemCount="5"
            app:picker_textSize="18.4sp"
            app:fontFamily="@font/open_sans_reg"/>

    <com.bupp.wood_spoon_eaters.custom_views.BlueBtnCornered
            app:title="Schedule"
            android:id="@+id/timePickerScheduleBtn"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="7.7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/timePickerAsapBtn"
            android:padding="26dp"
            style="@style/Bold15Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:gravity="center"
            android:text="Deliver Now"/>

</LinearLayout>