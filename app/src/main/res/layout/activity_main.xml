<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.bupp.wood_spoon_eaters.custom_views.HeaderView
            android:id="@+id/mainActHeaderView"
            app:type="HEADER_VIEW_TYPE_FEED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:id="@+id/mainActContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <TextView
                android:layout_alignParentBottom="true"
                android:layout_above="@+id/activeOrderBottomBarTitle"
                android:visibility="gone"
                android:id="@+id/CheckOutBottomBarTitle"
                android:layout_gravity="bottom"
                style="@style/Bold17White"
                android:gravity="center"
                android:background="@color/teal_blue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/status_bottom_bar_height"
                android:text="Checkout"/>

        <TextView
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:layout_marginTop="15.4dp"
                android:id="@+id/activeOrderBottomBarTitle"
                android:layout_gravity="bottom"
                style="@style/Bold17White"
                android:gravity="center"
                android:background="@color/teal_blue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/status_bottom_bar_height"
                android:text="Track Your Order"/>

        <com.bupp.wood_spoon_eaters.custom_views.WoodSpoonProgressBar
                android:id="@+id/mainActPb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:isBlueStyle="false"/>
    </RelativeLayout>

</LinearLayout>