<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainActMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white">

    <LinearLayout
            android:id="@+id/mainActCampaignHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:animateLayoutChanges="true"
            android:background="@color/teal_blue"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

        <com.bupp.wood_spoon_eaters.views.UserImageView
                app:imageSize="HEADER"
                android:paddingStart="15.4dp"
                android:layout_gravity="center"
                android:id="@+id/mainActCampaignImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/mainActCampaignTitle"
                style="@style/LatoBold15White"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingStart="8dp"
                tools:text=" Enjoy 30% off your first order" />

        <TextView
                android:id="@+id/mainActCampaignDetails"
                android:paddingEnd="15.4dp"
                style="@style/LatoBold11White60"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:letterSpacing="0.03"
                android:gravity="end|center"
                tools:text="View details"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:layout_constraintTop_toBottomOf="@+id/mainActCampaignHeader">

        <com.bupp.wood_spoon_eaters.custom_views.HeaderView
                android:id="@+id/mainActHeaderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:type="HEADER_VIEW_TYPE_FEED" />

    </androidx.cardview.widget.CardView>


    <FrameLayout
            android:id="@+id/mainActContainer"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/mainActOrdersBB"
            app:layout_constraintTop_toBottomOf="@+id/headerCard"
            app:layout_constraintVertical_weight="1" />

    <com.bupp.wood_spoon_eaters.views.CartBottomBar
            android:id="@+id/mainActOrdersBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible" />

<!--    <com.bupp.wood_spoon_eaters.views.WSProgressBar-->
<!--            android:id="@+id/mainActPb"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            app:isBlueStyle="false"-->
<!--            tools:visibility="gone" />-->

</androidx.constraintlayout.widget.ConstraintLayout>



