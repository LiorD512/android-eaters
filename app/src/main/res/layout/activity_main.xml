<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainActMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white">

    <LinearLayout
            android:id="@+id/mainActCampaignHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/teal_blue"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

        <ImageView
                android:id="@+id/mainActCampaignImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible" />

        <TextView
                android:id="@+id/mainActCampaignTitle"
                style="@style/Bold15White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                tools:text="this is a campaign coupon that gives yoi 20% off" />

        <TextView
                android:id="@+id/mainActCampaignSubTitle"
                style="@style/Reg13White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:visibility="gone"
                tools:text="this is a campaign coupon subtitle that gives you 20% off"
                tools:visibility="visible" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:layout_constraintTop_toBottomOf="@+id/mainActCampaignHeader">

        <com.bupp.wood_spoon_eaters.custom_views.HeaderView
                android:id="@+id/mainActHeaderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:type="HEADER_VIEW_TYPE_FEED" />

    </androidx.cardview.widget.CardView>


    <FrameLayout
            android:id="@+id/mainActContainer"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/mainActOrdersBB"
            app:layout_constraintTop_toBottomOf="@+id/headerCard"
            app:layout_constraintVertical_weight="1" />

    <com.bupp.wood_spoon_eaters.views.CartBottomBar
            android:id="@+id/mainActOrdersBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible" />

<!--    <com.bupp.wood_spoon_eaters.views.WSProgressBar-->
<!--            android:id="@+id/mainActPb"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            app:isBlueStyle="false"-->
<!--            tools:visibility="gone" />-->

</androidx.constraintlayout.widget.ConstraintLayout>



