<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainActMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:visibility="gone"
            android:background="@color/teal_blue"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:id="@+id/mainActCampaignHeader"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:visibility="gone"
                android:id="@+id/mainActCampaignImg"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/mainActCampaignTitle"
                android:padding="5dp"
                style="@style/Bold15White"
                android:gravity="center"
                tools:text="this is a campaign coupon that gives yoi 20% off"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView
                android:visibility="gone"
                android:id="@+id/mainActCampaignSubTitle"
                android:padding="5dp"
                style="@style/Reg13White"
                android:gravity="start"
                tools:text="this is a campaign coupon that gives yoi 20% off"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.bupp.wood_spoon_eaters.custom_views.HeaderView
            android:id="@+id/mainActHeaderView"
            app:type="HEADER_VIEW_TYPE_FEED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:animateLayoutChanges="true"
            android:id="@+id/mainActContainerLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:visibility="gone"
                android:paddingStart="15.4dp"
                android:paddingEnd="15.4dp"
                android:id="@+id/mainActLocationDisabledText"
                style="@style/SemiBold13White"
                android:background="@color/teal_blue"
                android:gravity="center"
                android:text="@string/device_location_off_alerter_body"
                android:layout_width="match_parent" android:layout_height="60dp"/>

        <FrameLayout
                android:id="@+id/mainActContainer"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        <com.bupp.wood_spoon_eaters.custom_views.orders_bottom_bar.OrdersBottomBar
                android:id="@+id/mainActOrdersBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.bupp.wood_spoon_eaters.custom_views.WoodSpoonProgressBar
            android:id="@+id/mainActPb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isBlueStyle="false"/>

</LinearLayout>