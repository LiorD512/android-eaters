<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainActMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white">

    <com.bupp.wood_spoon_eaters.views.CampaignBanner
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/mainActCampaignBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:layout_constraintTop_toBottomOf="@+id/mainActCampaignBanner">

        <com.bupp.wood_spoon_eaters.custom_views.HeaderView
                android:id="@+id/mainActHeaderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:type="HEADER_VIEW_TYPE_FEED" />

    </androidx.cardview.widget.CardView>


    <FrameLayout
            android:id="@+id/mainActContainer"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/mainActOrdersBB"
            app:layout_constraintTop_toBottomOf="@+id/headerCard"
            app:layout_constraintVertical_weight="1" />

    <com.bupp.wood_spoon_eaters.views.CartBottomBar
            android:id="@+id/mainActOrdersBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible" />

<!--    <com.bupp.wood_spoon_eaters.views.WSProgressBar-->
<!--            android:id="@+id/mainActPb"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            app:isBlueStyle="false"-->
<!--            tools:visibility="gone" />-->

</androidx.constraintlayout.widget.ConstraintLayout>



