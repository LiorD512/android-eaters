<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bupp.wood_spoon_eaters.features.main.search.single_dish.SingleDishFragmentDialog">

    <RelativeLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <ImageButton
                android:id="@+id/singleDishHeaderBack"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="15.4dp"
                android:background="@null"
                android:src="@drawable/icons_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_toLeftOf="@+id/singleDishHeaderIngredient"
                android:layout_centerVertical="true"
                android:id="@+id/singleDishHeaderInfo"
                android:text="Info"
                android:textColor="@color/grey_to_black_selector"
                android:layout_marginRight="47dp"
                android:background="@null"
                android:gravity="center"
                android:drawableTop="@drawable/dish_tab_info_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_centerInParent="true"
                android:id="@+id/singleDishHeaderIngredient"
                android:text="Ingredient"
                android:textColor="@color/grey_to_black_selector"
                android:background="@null"
                android:gravity="center"
                android:drawableTop="@drawable/dish_tab_ingredients_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/singleDishHeaderIngredient"
                android:id="@+id/singleDishHeaderCook"
                android:text="Cook"
                android:textColor="@color/grey_to_black_selector"
                android:layout_marginLeft="35dp"
                android:background="@null"
                android:gravity="center"
                android:drawableTop="@drawable/dish_tab_cook_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/singleDishFragAppBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/singeDishCollapsingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                        app:contentScrim="@color/white">

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="268dp"
                            android:background="@color/white">

                        <ImageView
                                android:scaleType="centerCrop"
                                android:id="@+id/singleDishInfoImg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>


                            <com.bupp.wood_spoon_eaters.custom_views.UserImageView
                                    android:id="@+id/singleDishInfoCook"
                                    app:imageSize="SMALL"
                                    android:layout_margin="10.6dp"
                                    android:layout_width="57.6dp"
                                    android:layout_height="57.6dp"/>


                        <com.bupp.wood_spoon_eaters.custom_views.FavoriteBtn
                                android:id="@+id/singleDishInfoFavorite"
                                android:layout_marginRight="7.7dp"
                                android:layout_marginBottom="7.7dp"
                                android:layout_gravity="bottom|right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                    </FrameLayout>

                    <androidx.appcompat.widget.Toolbar
                            android:background="@color/red"
                            android:id="@+id/calendarFragToolBar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:visibility="visible"
                            app:layout_collapseMode="pin">


                    </androidx.appcompat.widget.Toolbar>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                    android:id="@+id/singleDishScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fillViewport="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                        android:background="@color/silver"
                        android:id="@+id/singleDishContentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:visibility="visible">

                    <LinearLayout
                            android:paddingTop="7.7dp"
                            android:paddingRight="15.4dp"
                            android:paddingLeft="15.4dp"
                            android:paddingBottom="38dp"
                            android:background="@color/white"
                            android:id="@+id/singleDishInfoLayout"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                                  android:layout_height="wrap_content">

                        <TextView
                                style="@style/SemiBold15Dark"
                                android:id="@+id/singleDishInfoName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Tomato Soup"/>

                        <LinearLayout
                                android:gravity="center|left"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    style="@style/Reg13Dark_50"
                                    android:id="@+id/singleDishInfoCookName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="By Oded Shoshan"/>

                            <ImageView
                                    android:layout_marginLeft="7.7dp"
                                    android:id="@+id/singleDishInfoCookFlag"
                                    android:layout_width="23dp"
                                    android:layout_height="23dp"/>

                        </LinearLayout>

                        <TextView
                                style="@style/Reg13Dark"
                                android:id="@+id/singleDishInfoDescription"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A rich tomato, basil and parmesan soup with crunchy sourdough and cheddar toasty fingers"/>

                        <LinearLayout
                                android:weightSum="3"
                                android:layout_marginTop="16.8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icons_price_black"/>

                                <TextView
                                        android:id="@+id/singleDishInfoPrice"
                                        style="@style/Reg13Dark"
                                        android:paddingLeft="7.8dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        tools:text="$7"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icons_dishes"/>

                                <TextView
                                        android:id="@+id/singleDishInfoQuantity"
                                        style="@style/Reg13Dark"
                                        android:paddingLeft="7.8dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        tools:text="5/20 Left"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icons_raitings"/>

                                <TextView
                                        android:id="@+id/singleDishInfoRating"
                                        style="@style/Reg13Dark"
                                        android:paddingLeft="7.8dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        tools:text="4.8"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_marginTop="29.3dp"
                                android:layout_marginLeft="15.4dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <com.bupp.wood_spoon_eaters.custom_views.DishCounterView
                                    android:id="@+id/singleDishInfoDishCounter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <View
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginRight="32dp"
                                    android:background="@color/silver"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"/>

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                <TextView
                                        android:id="@+id/singleDishInfoDate"
                                        style="@style/Bold17Blue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        tools:text="ASAP, 37-49 min"/>

                                <TextView
                                        android:layout_marginTop="20dp"
                                        android:id="@+id/singleDishInfoDelivery"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13.4sp"
                                        android:textColor="@color/dark"
                                        android:letterSpacing="0.04"
                                        tools:text="Deliverd To Your Door"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:paddingTop="30dp"
                            android:paddingRight="15.4dp"
                            android:paddingLeft="15.4dp"
                            android:paddingBottom="38dp"
                            android:background="@color/white"
                            android:layout_marginTop="15.4dp"
                            android:orientation="vertical"
                            android:id="@+id/singleDishIngredientLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:weightSum="2"
                                android:layout_marginStart="15dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                  android:layout_height="wrap_content">

                            <LinearLayout
                                    android:gravity="start|center"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icons_calories"/>

                                <TextView
                                        style="@style/SemiBold13Dark"
                                        android:id="@+id/singleDishIngredientCalories"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7.7dp"
                                        android:gravity="center"
                                        tools:text="522 Calories"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:gravity="left|center"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icons_cooking_method"/>

                                <TextView
                                        style="@style/SemiBold13Dark"
                                        android:id="@+id/singleDishIngredientSauteing"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7.7dp"
                                        android:gravity="center"
                                        tools:text="Sauteing"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:weightSum="2"
                                android:layout_marginTop="28dp"
                                android:layout_marginLeft="15dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:gravity="left|center"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icons_protein"/>

                                <TextView
                                        style="@style/SemiBold13Dark"
                                        android:id="@+id/singleDishIngredientProtein"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7.7dp"
                                        android:gravity="center"
                                        tools:text="5g Protein"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:gravity="left|center"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">

                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icons_cooking_method"/>

                                <TextView
                                        style="@style/SemiBold13Dark"
                                        android:id="@+id/singleDishIngredientCarbohydrate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7.7dp"
                                        android:gravity="center"
                                        tools:text="3g Carbohydrate"/>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                                style="@style/SemiBold15Dark"
                                android:layout_marginTop="31dp"
                                android:layout_marginBottom="23dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Ingredients"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/singleDishIngredientList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                style="@style/SemiBold15Dark"
                                android:layout_marginTop="15.4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Special instructions"/>

                        <TextView
                                style="@style/Reg13Dark_50"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The cook will try to take your request
into consideration"/>

                        <com.bupp.wood_spoon_eaters.custom_views.InputTitleView
                                android:layout_marginTop="15.4dp"
                                android:id="@+id/singleDishIngredientInstructions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <FrameLayout
                            android:id="@+id/singleDishCookLayout"
                            android:background="@color/white"
                            android:layout_marginTop="15.4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <include layout="@layout/cook_profile_fragment"/>

                    </FrameLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <com.bupp.wood_spoon_eaters.custom_views.WoodSpoonProgressBar
                    android:id="@+id/calendarFragPb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:visibility="gone"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>


</LinearLayout>
