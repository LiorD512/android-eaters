<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_marginTop="15.7dp"
        android:layout_marginBottom="15.3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/orderDetailsDishName"
            tools:text="Tomato Soup"
            style="@style/Reg13Dark"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/orderDetailsDishPrice"
            tools:text="$7"
            style="@style/SemiBold13Blue"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>

