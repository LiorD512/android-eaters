<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/restaurantActContainer"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/restaurant_nav" />

    <com.bupp.wood_spoon_eaters.views.MessageSnackBar
            android:id="@+id/restaurantActMsgSnacBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <com.bupp.wood_spoon_eaters.views.WSProgressBar
            android:id="@+id/restaurantAct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

</FrameLayout>

