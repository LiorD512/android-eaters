<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:visibility="gone"
            android:id="@+id/bottomBarCheckout"
            android:layout_gravity="bottom"
            style="@style/Bold17White"
            android:gravity="center"
            android:background="@color/teal_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bottom_bar_height"
            android:text="Checkout"/>

    <View
            android:id="@+id/bottomBarSeparator"
            android:layout_width="match_parent" android:layout_height="15.4dp"/>

    <TextView
            android:visibility="gone"
            android:id="@+id/bottomBarActiveOrders"
            android:layout_gravity="bottom"
            style="@style/Bold17White"
            android:gravity="center"
            android:background="@color/teal_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bottom_bar_height"
            android:text="Track Your Order"/>

</LinearLayout>