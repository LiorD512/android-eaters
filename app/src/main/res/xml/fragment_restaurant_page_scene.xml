<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            android:id="@+id/startToMiddle"
            motion:constraintSetEnd="@+id/middle"
            motion:constraintSetStart="@id/start"
            motion:duration="1000">
        <OnSwipe
                motion:dragDirection="dragUp"
                motion:dragScale="1"
                motion:moveWhenScrollAtTop="true"
                motion:onTouchUp="stop"
                motion:touchAnchorId="@id/mainRecyclerView"
                motion:touchAnchorSide="top"/>
    </Transition>

    <Transition
            android:id="@+id/middleToEnd"
            motion:constraintSetStart="@+id/middle"
            motion:constraintSetEnd="@+id/end"
            motion:duration="1000">

        <OnSwipe
                motion:dragDirection="dragUp"
                motion:dragScale="1"
                motion:moveWhenScrollAtTop="true"
                motion:onTouchUp="stop"
                motion:touchAnchorId="@id/mainRecyclerView"
                motion:touchAnchorSide="top"/>

        <KeyFrameSet>
            <KeyAttribute
                    motion:keyPositionType="pathRelative"
                    android:alpha="1"
                    motion:framePosition="40"
                    motion:motionTarget="@+id/topHeader"/>
        </KeyFrameSet>

    </Transition>


    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/middle">
        <Constraint
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                motion:layout_constraintTop_toBottomOf="@id/topHeader"
                motion:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="0dp"
                android:id="@+id/restaurantHeader" />
        <Constraint
                android:id="@+id/shareButton"
                motion:layout_constraintEnd_toStartOf="@id/menuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.4dp"
                motion:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:visibility="invisible" />
        <Constraint
                android:id="@+id/menuButton"
                motion:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                motion:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:visibility="invisible" />

        <Constraint
                android:id="@+id/coverPhoto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toTopOf="@id/mainRecyclerView"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                android:visibility="invisible" />

        <Constraint
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                motion:layout_constraintBottom_toTopOf="@+id/restaurantHeader"
                android:layout_marginStart="15dp"
                motion:layout_constraintStart_toStartOf="parent"
                android:visibility="invisible" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end" >
        <Constraint
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                motion:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="0dp"
                android:id="@+id/restaurantHeader"
                motion:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible" />
        <Constraint
                android:id="@+id/shareButton"
                motion:layout_constraintEnd_toStartOf="@id/menuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.4dp"
                motion:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:visibility="invisible" />
        <Constraint
                android:id="@+id/menuButton"
                motion:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                motion:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:visibility="invisible" />
        <Constraint
                android:id="@+id/coverPhoto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toTopOf="@id/mainRecyclerView"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                android:visibility="invisible" />
        <Constraint
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                motion:layout_constraintBottom_toTopOf="@+id/restaurantHeader"
                android:layout_marginStart="15dp"
                motion:layout_constraintStart_toStartOf="parent"
                android:visibility="invisible" />
        <Constraint
                android:id="@+id/topHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                android:alpha="1" />
    </ConstraintSet>
</MotionScene>