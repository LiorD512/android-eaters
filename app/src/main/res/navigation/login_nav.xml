<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/on_boarding_nav"
    app:startDestination="@id/welcomeFragment">

    <fragment
            android:id="@+id/loginMainFragment"
            android:name="com.bupp.wood_spoon_eaters.features.login.fragments.LoginMainFragment"
            android:label="fragment_main"
            tools:layout="@layout/fragment_login_main">

    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.bupp.wood_spoon_eaters.features.login.fragments.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
                app:enterAnim="@anim/slide_right_enter"
                app:exitAnim="@anim/slide_right_exit"
                app:popEnterAnim="@anim/slide_left_enter"
                app:popExitAnim="@anim/slide_left_exit"
                app:popUpTo="@+id/welcomeFragment"
                android:id="@+id/action_welcomeFragment_to_loginMainFragment"
                app:destination="@id/loginMainFragment" >
            <argument
                    android:name="start_with_args"
                    app:argType="integer"
                    android:defaultValue="0" />
        </action>
    </fragment>


</navigation>